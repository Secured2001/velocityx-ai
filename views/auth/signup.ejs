  { name: 'India', code: 'in', dial: '+91' },
  { name: 'Singapore', code: 'sg', dial: '+65' },
  { name: 'Hong Kong', code: 'hk', dial: '+852' },
  { name: 'Malaysia', code: 'my', dial: '+60' },
  { name: 'Thailand', code: 'th', dial: '+66' },
  { name: 'Indonesia', code: 'id', dial: '+62' },
  { name: 'Philippines', code: 'ph', dial: '+63' },
  { name: 'Vietnam', code: 'vn', dial: '+84' },
  { name: 'Brazil', code: 'br', dial: '+55' },
  { name: 'Mexico', code: 'mx', dial: '+52' },
  { name: 'Argentina', code: 'ar', dial: '+54' },
  { name: 'Chile', code: 'cl', dial: '+56' },
  { name: 'Colombia', code: 'co', dial: '+57' },
  { name: 'Peru', code: 'pe', dial: '+51' },
  { name: 'South Africa', code: 'za', dial: '+27' },
  { name: 'Nigeria', code: 'ng', dial: '+234' },
  { name: 'Kenya', code: 'ke', dial: '+254' },
  { name: 'Egypt', code: 'eg', dial: '+20' },
  { name: 'Turkey', code: 'tr', dial: '+90' },
  { name: 'United Arab Emirates', code: 'ae', dial: '+971' },
  { name: 'Saudi Arabia', code: 'sa', dial: '+966' },
  { name: 'Israel', code: 'il', dial: '+972' },
  { name: 'Russia', code: 'ru', dial: '+7' },
  { name: 'Ukraine', code: 'ua', dial: '+380' },
  { name: 'Czech Republic', code: 'cz', dial: '+420' },
  { name: 'Hungary', code: 'hu', dial: '+36' },
  { name: 'Romania', code: 'ro', dial: '+40' },
  { name: 'New Zealand', code: 'nz', dial: '+64' }
].sort((a, b) => a.name.localeCompare(b.name));

let vxCurrentStep = 1;
let vxFormData = {
  username: '',
  fullName: '',
  email: '',
  phone: '',
  country: 'United States',
  countryCode: 'us',
  password: '',
  confirm: '',
  captcha: '',
  agreedToTerms: false
};

let vxCurrentCaptcha = '';

function vxInit() {
  vxGenerateCaptcha();
  vxPopulateCountries();
  vxAttachEventListeners();
  vxValidateStep1();
}

function vxGenerateCaptcha() {
  const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
  let code = '';
  for (let i = 0; i < 6; i++) {
    code += chars.charAt(Math.floor(Math.random() * chars.length));
  }
  vxCurrentCaptcha = code;
  document.getElementById('vx_captcha_code').textContent = code;
  document.getElementById('vx_captcha_input').value = '';
}

function vxPopulateCountries() {
  const listEl = document.getElementById('vx_country_list');
  listEl.innerHTML = '';

  VX_COUNTRIES.forEach(country => {
    const option = document.createElement('div');
    option.className = 'vx_country_option';
    option.innerHTML = `
      <span class="fi fi-${country.code} vx_flag_icon"></span>
      <span>${country.name}</span>
    `;
    option.addEventListener('click', () => vxSelectCountry(country));
    listEl.appendChild(option);
  });
}

function vxSelectCountry(country) {
  vxFormData.country = country.name;
  vxFormData.countryCode = country.code;
  document.getElementById('vx_selected_country').textContent = country.name;
  document.getElementById('vx_selected_flag').className = `fi fi-${country.code} vx_flag_icon`;
  vxCloseCountryDropdown();
  vxValidateStep2();
}

function vxToggleCountryDropdown() {
  const dropdown = document.getElementById('vx_country_dropdown');
  const display = document.getElementById('vx_country_display');
  const isOpen = dropdown.classList.contains('vx_open');

  if (isOpen) {
    vxCloseCountryDropdown();
  } else {
    dropdown.classList.add('vx_open');
    display.classList.add('vx_open');
    document.getElementById('vx_country_search').focus();
  }
}

function vxCloseCountryDropdown() {
  const dropdown = document.getElementById('vx_country_dropdown');
  const display = document.getElementById('vx_country_display');
  dropdown.classList.remove('vx_open');
  display.classList.remove('vx_open');
  document.getElementById('vx_country_search').value = '';
  vxPopulateCountries();
}

function vxSearchCountries(query) {
  const listEl = document.getElementById('vx_country_list');
  listEl.innerHTML = '';

  const filtered = VX_COUNTRIES.filter(c =>
    c.name.toLowerCase().includes(query.toLowerCase())
  );

  filtered.forEach(country => {
    const option = document.createElement('div');
    option.className = 'vx_country_option';
    option.innerHTML = `
      <span class="fi fi-${country.code} vx_flag_icon"></span>
      <span>${country.name}</span>
    `;
    option.addEventListener('click', () => vxSelectCountry(country));
    listEl.appendChild(option);
  });
}

function vxAttachEventListeners() {
  document.getElementById('vx_username').addEventListener('input', vxValidateStep1);
  document.getElementById('vx_fullname').addEventListener('input', vxValidateStep1);
  document.getElementById('vx_email').addEventListener('input', vxValidateStep1);
  document.getElementById('vx_phone').addEventListener('input', vxValidateStep1);

  document.getElementById('vx_continue_1').addEventListener('click', () => vxGoToStep(2));

  document.getElementById('vx_country_display').addEventListener('click', vxToggleCountryDropdown);
  document.getElementById('vx_country_search').addEventListener('input', (e) => vxSearchCountries(e.target.value));

  document.getElementById('vx_back_2').addEventListener('click', () => vxGoToStep(1));
  document.getElementById('vx_continue_2').addEventListener('click', () => vxGoToStep(3));

  document.getElementById('vx_password').addEventListener('input', vxValidateStep3);
  document.getElementById('vx_confirm').addEventListener('input', vxValidateStep3);
  document.getElementById('vx_captcha_input').addEventListener('input', vxValidateStep3);
  document.getElementById('vx_agree_tos').addEventListener('change', vxValidateStep3);

  document.getElementById('vx_captcha_refresh').addEventListener('click', vxGenerateCaptcha);

  document.getElementById('vx_back_3').addEventListener('click', () => vxGoToStep(2));
  document.getElementById('vx_create_btn').addEventListener('click', vxSubmitForm);

  document.addEventListener('click', (e) => {
    const dropdown = document.getElementById('vx_country_dropdown');
    const display = document.getElementById('vx_country_display');
    if (!dropdown.contains(e.target) && !display.contains(e.target)) {
      vxCloseCountryDropdown();
    }
  });
}

function vxGoToStep(step) {
  document.querySelectorAll('.vx_panel').forEach(p => {
    p.classList.remove('vx_active');
  });
  document.getElementById(`vx_panel_${step}`).classList.add('vx_active');

  document.querySelectorAll('.vx_step_item').forEach((item, idx) => {
    item.classList.remove('vx_active', 'vx_completed');
    const circle = item.querySelector('.vx_step_circle');

    if (idx + 1 < step) {
      item.classList.add('vx_completed');
      circle.innerHTML = '<i class="fas fa-check"></i>';
    } else if (idx + 1 === step) {
      item.classList.add('vx_active');
      circle.textContent = step;
    } else {
      circle.textContent = idx + 1;
    }
  });

  vxCurrentStep = step;

  if (step === 2) vxValidateStep2();
  if (step === 3) vxValidateStep3();
}

function vxValidateStep1() {
  const username = document.getElementById('vx_username').value.trim();
  const fullName = document.getElementById('vx_fullname').value.trim();
  const email = document.getElementById('vx_email').value.trim();
  const phone = document.getElementById('vx_phone').value.trim();

  vxClearError('vx_username_error');
  vxClearError('vx_fullname_error');
  vxClearError('vx_email_error');
  vxClearError('vx_phone_error');

  let isValid = true;

  if (!username || username.length < 3) {
    isValid = false;
  }

  if (!fullName || fullName.length < 2) {
    isValid = false;
  }

  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (!email || !emailRegex.test(email)) {
    isValid = false;
  }

  if (!phone || phone.length < 10) {
    isValid = false;
  }

  document.getElementById('vx_continue_1').disabled = !isValid;

  if (isValid) {
    vxFormData.username = username;
    vxFormData.fullName = fullName;
    vxFormData.email = email;
    vxFormData.phone = phone;
  }

  return isValid;
}

function vxValidateStep2() {
  const isValid = vxFormData.country !== '';
  document.getElementById('vx_continue_2').disabled = !isValid;
  return isValid;
}

function vxValidateStep3() {
  const password = document.getElementById('vx_password').value;
  const confirm = document.getElementById('vx_confirm').value;
  const captchaInput = document.getElementById('vx_captcha_input').value.trim().toUpperCase();
  const agreedToTerms = document.getElementById('vx_agree_tos').checked;

  vxClearError('vx_password_error');
  vxClearError('vx_confirm_error');
  vxClearError('vx_captcha_error');
  vxClearError('vx_tos_error');

  let isValid = true;

  const hasLength = password.length >= 8;
  const hasUpperAndLower = /(?=.*[a-z])(?=.*[A-Z])/.test(password);
  const hasNumberOrSpecial = /[0-9\W]/.test(password);

  const rules = document.querySelectorAll('.vx_rule_item');
  rules[0].classList.toggle('vx_valid', hasLength);
  rules[1].classList.toggle('vx_valid', hasUpperAndLower);
  rules[2].classList.toggle('vx_valid', hasNumberOrSpecial);

  if (!hasLength || !hasUpperAndLower || !hasNumberOrSpecial) {
    isValid = false;
  }

  if (password !== confirm || !confirm) {
    isValid = false;
  }

  if (captchaInput !== vxCurrentCaptcha) {
    isValid = false;
  }

  if (!agreedToTerms) {
    isValid = false;
  }

  document.getElementById('vx_create_btn').disabled = !isValid;

  if (isValid) {
    vxFormData.password = password;
    vxFormData.confirm = confirm;
    vxFormData.captcha = captchaInput;
    vxFormData.agreedToTerms = agreedToTerms;
  }

  return isValid;
}

function vxShowError(fieldId, message) {
  const errorEl = document.getElementById(fieldId);
  if (errorEl) {
    errorEl.textContent = message;
    errorEl.classList.add('vx_show');
    const fieldGroup = errorEl.closest('.vx_field_group');
    if (fieldGroup) fieldGroup.classList.add('vx_error');
  }
}

function vxClearError(fieldId) {
  const errorEl = document.getElementById(fieldId);
  if (errorEl) {
    errorEl.textContent = '';
    errorEl.classList.remove('vx_show');
    const fieldGroup = errorEl.closest('.vx_field_group');
    if (fieldGroup) fieldGroup.classList.remove('vx_error');
  }
}

function vxShowGlobalError(message) {
  const errorEl = document.getElementById('vx_global_error');
  errorEl.textContent = message;
  errorEl.classList.add('vx_show');
  errorEl.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
}

function vxSubmitForm() {
  if (!vxValidateStep3()) {
    vxShowGlobalError('Please complete all required fields correctly.');
    return;
  }

  document.getElementById('vx_final_username').value = vxFormData.username;
  document.getElementById('vx_final_fullname').value = vxFormData.fullName;
  document.getElementById('vx_final_email').value = vxFormData.email;
  document.getElementById('vx_final_phone').value = vxFormData.phone;
  document.getElementById('vx_final_country').value = vxFormData.country;
  document.getElementById('vx_final_password').value = vxFormData.password;

  document.getElementById('vx_create_btn').disabled = true;
  document.getElementById('vx_create_btn').innerHTML = '<i class="fas fa-spinner fa-spin"></i> <span>Creating Account...</span>';

  document.getElementById('vx_final_form').submit();
}

