</div>

<script>
const vxLoginState = {
  loading: false
};

function vxInitLogin() {
  const passwordToggle = document.getElementById('vx_password_toggle');
  const passwordInput = document.getElementById('vx_password');
  const loginForm = document.getElementById('vx_login_form');

  passwordToggle.addEventListener('click', () => vxTogglePassword());
  loginForm.addEventListener('submit', (e) => vxHandleLogin(e));
}

function vxTogglePassword() {
  const passwordInput = document.getElementById('vx_password');
  const toggle = document.getElementById('vx_password_toggle');
  const icon = toggle.querySelector('i');

  if (passwordInput.type === 'password') {
    passwordInput.type = 'text';
    icon.classList.remove('fa-eye');
    icon.classList.add('fa-eye-slash');
  } else {
    passwordInput.type = 'password';
    icon.classList.remove('fa-eye-slash');
    icon.classList.add('fa-eye');
  }
}

function vxShowAlert(message, type = 'error') {
  const alertEl = document.getElementById('vx_login_alert');
  alertEl.textContent = message;
  alertEl.className = `vx_alert vx_show vx_alert_${type}`;
  alertEl.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
}

function vxHandleLogin(e) {
  e.preventDefault();

  if (vxLoginState.loading) return;

  const email = document.getElementById('vx_email').value.trim();
  const password = document.getElementById('vx_password').value;
  const loginBtn = document.getElementById('vx_login_btn');

  if (!email || !password) {
    vxShowAlert('Please enter both email and password', 'error');
    return;
  }

  vxLoginState.loading = true;
  loginBtn.disabled = true;
  loginBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> <span>Accessing...</span>';

  setTimeout(() => {
    document.getElementById('vx_login_form').action = '/login';
    document.getElementById('vx_login_form').method = 'POST';
    document.getElementById('vx_login_form').submit();
  }, 500);
}

document.addEventListener('DOMContentLoaded', vxInitLogin);
</script>

</body>
</html>
