    <form id="vx_login_form" class="vx_login_form">
      <div class="vx_form_group">
        <label for="vx_email" class="vx_form_label">Email Address or Username</label>
        <div class="vx_input_wrapper">
          <i class="vx_input_icon fas fa-envelope"></i>
          <input
            type="text"
            id="vx_email"
            name="email"
            class="vx_login_input"
            placeholder="enter your email or username"
            required
          >
        </div>
      </div>

      <div class="vx_form_group vx_password_container">
        <label for="vx_password" class="vx_form_label">Password</label>
        <div class="vx_input_wrapper">
          <i class="vx_input_icon fas fa-lock"></i>
          <input
            type="password"
            id="vx_password"
            name="password"
            class="vx_login_input"
            placeholder="enter your password"
            required
          >
          <button
            type="button"
            class="vx_password_toggle"
            id="vx_password_toggle"
            aria-label="Toggle password visibility"
          >
            <i class="fas fa-eye"></i>
          </button>
        </div>
      </div>

      <div class="vx_form_row">
        <div class="vx_checkbox_wrapper">
          <input type="checkbox" id="vx_remember" name="remember">
          <label for="vx_remember">Remember me</label>
        </div>
        <a href="/forgot-password" class="vx_forgot_link">Forgot password?</a>
