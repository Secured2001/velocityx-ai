        </div>
        <div class="atb_bot_success">
          <span class="atb_success_badge">${bot.success} Success</span>
        </div>
      </div>

      <h3 class="atb_bot_name">${bot.name}</h3>
      <p class="atb_bot_category">${bot.category} Trading</p>

      <p class="atb_bot_description">${bot.description}</p>

      <div class="atb_bot_metrics">
        <div class="atb_metric">
          <span class="atb_metric_label">Daily Profit</span>
          <span class="atb_metric_value">${bot.profitRange}</span>
        </div>
        <div class="atb_metric">
          <span class="atb_metric_label">Duration</span>
          <span class="atb_metric_value">${bot.duration}</span>
        </div>
      </div>

      <div class="atb_bot_section">
        <p class="atb_bot_label">Investment Range:</p>
        <p class="atb_bot_range">${bot.minInvest} - ${bot.maxInvest}</p>
      </div>

      <div class="atb_bot_section">
        <p class="atb_bot_label">Trading Pairs:</p>
        <div class="atb_bot_pairs">
          ${bot.pairs.map(pair => `<span class="atb_pair">${pair}</span>`).join('')}
        </div>
      </div>

      <div class="atb_bot_stats">
        <div class="atb_stat">
          <span class="atb_stat_label">${bot.activeUsers} Active Users</span>
        </div>
        <div class="atb_stat">
          <span class="atb_stat_label">${bot.earned} Total Earned</span>
        </div>
      </div>

      <a class="atb_btn_invest" href="/user/bot-trading/4">Invest Now</a>
    </div>
  `;
}

function renderBots(category = 'all') {
  const container = document.getElementById('botsContainer');
  const filtered = category === 'all'
    ? botsData
    : botsData.filter(bot => bot.category === category);

  container.innerHTML = filtered.map(bot => createBotCard(bot)).join('');
}

function setupFilters() {
  document.querySelectorAll('.atb_filter_btn').forEach(btn => {
    btn.addEventListener('click', function() {
      document.querySelectorAll('.atb_filter_btn').forEach(b =>
        b.classList.remove('atb_filter_active')
      );
      this.classList.add('atb_filter_active');
      renderBots(this.dataset.filter);
    });
  });
}

document.addEventListener('DOMContentLoaded', () => {
  renderBots('all');
  setupFilters();
});

