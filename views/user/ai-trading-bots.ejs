    * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  --dark-bg: #0a0e1a;
  --dark-surface: #121827;
  --dark-card: #1e293b;
  --border-color: #475569;
  --text-primary: #ffffff;
  --text-secondary: #e2e8f0;
  --text-muted: #94a3b8;
  --text-dim: #64748b;
  --color-blue: #3b82f6;
  --color-green: #22c55e;
  --color-yellow: #fbbf24;
  --color-orange: #f97316;
}

html, body {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

body {
  background: linear-gradient(180deg, var(--dark-bg) 0%, var(--dark-surface) 50%, #0f1419 100%);
  color: var(--text-secondary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
  font-size: 16px;
  line-height: 1.6;
  min-height: 100vh;
  position: relative;
}

body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 600px;
  background: radial-gradient(ellipse at top, rgba(59, 130, 246, 0.15) 0%, transparent 60%);
  pointer-events: none;
  z-index: 1;
}

.atb_main {
  position: relative;
  z-index: 10;
  min-height: 100vh;
}

.atb_header {
  max-width: 1400px;
  margin: 0 auto;
  padding: 4rem 2rem 3rem;
  text-align: center;
  animation: fadeInDown 0.6s ease-out;
}

.atb_header_content {
  max-width: 800px;
  margin: 0 auto;
}

.atb_title {
  font-size: 3rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 1rem;
  letter-spacing: -0.02em;
  background: linear-gradient(135deg, #ffffff 0%, #94a3b8 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.atb_subtitle {
  font-size: 1.125rem;
  color: var(--text-muted);
  line-height: 1.6;
  margin: 0;
}

.atb_container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem 4rem;
}

.atb_filters {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
  margin-bottom: 3rem;
  animation: fadeInUp 0.6s ease-out 0.1s both;
}

.atb_filter_btn {
  padding: 0.75rem 1.75rem;
  background: rgba(30, 41, 59, 0.6);
  border: 1px solid rgba(71, 85, 105, 0.4);
  border-radius: 0.75rem;
  color: var(--text-muted);
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(12px);
}

.atb_filter_btn:hover {
  border-color: rgba(71, 85, 105, 0.8);
  color: var(--text-secondary);
  background: rgba(30, 41, 59, 0.8);
}

.atb_filter_active {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-color: rgba(59, 130, 246, 0.6);
  color: var(--text-primary);
  box-shadow: 0 4px 16px rgba(59, 130, 246, 0.3);
}

.atb_bots_grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 2rem;
  animation: fadeInUp 0.6s ease-out 0.2s both;
}

.atb_bot_card {
  background: linear-gradient(135deg, rgba(30, 41, 59, 0.6) 0%, rgba(15, 23, 42, 0.8) 100%);
  border: 1px solid rgba(71, 85, 105, 0.3);
  border-radius: 1.25rem;
  padding: 1.75rem;
  backdrop-filter: blur(20px);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.atb_bot_card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.05), transparent);
  transition: left 0.6s ease;
}

.atb_bot_card:hover::before {
  left: 100%;
}

.atb_bot_card:hover {
  transform: translateY(-8px);
  border-color: rgba(59, 130, 246, 0.4);
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.4);
}

.atb_bot_header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1rem;
  position: relative;
  z-index: 1;
}

.atb_bot_icon {
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(37, 99, 235, 0.1) 100%);
  border-radius: 0.75rem;
  color: var(--color-blue);
  transition: transform 0.3s ease;
}

.atb_bot_card:hover .atb_bot_icon {
  transform: scale(1.1) rotate(5deg);
}

.atb_success_badge {
  display: inline-block;
  padding: 0.5rem 1rem;
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.2) 0%, rgba(22, 163, 74, 0.1) 100%);
  color: var(--color-green);
  border: 1px solid rgba(34, 197, 94, 0.3);
  border-radius: 0.5rem;
  font-size: 0.85rem;
  font-weight: 600;
}

.atb_bot_name {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 0.25rem 0;
  position: relative;
  z-index: 1;
}

.atb_bot_category {
  font-size: 0.85rem;
  color: var(--text-muted);
  margin: 0 0 1rem 0;
  text-transform: capitalize;
  position: relative;
  z-index: 1;
}

.atb_bot_description {
  font-size: 0.95rem;
  color: var(--text-muted);
  line-height: 1.5;
  margin-bottom: 1.5rem;
  position: relative;
  z-index: 1;
}

.atb_bot_metrics {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  margin-bottom: 1.5rem;
  position: relative;
  z-index: 1;
}

.atb_metric {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.atb_metric_label {
  font-size: 0.8rem;
  color: var(--text-dim);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 600;
}

.atb_metric_value {
  font-size: 1.1rem;
  font-weight: 700;
  color: var(--color-blue);
}

.atb_bot_section {
  margin-bottom: 1.25rem;
  position: relative;
  z-index: 1;
}

.atb_bot_label {
  font-size: 0.8rem;
  color: var(--text-dim);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 600;
  margin: 0 0 0.5rem 0;
}

.atb_bot_range {
  font-size: 0.95rem;
  color: var(--text-secondary);
  margin: 0;
  font-weight: 500;
}

.atb_bot_pairs {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.atb_pair {
  display: inline-block;
  padding: 0.375rem 0.75rem;
  background: rgba(59, 130, 246, 0.1);
  border: 1px solid rgba(59, 130, 246, 0.3);
  border-radius: 0.4rem;
  font-size: 0.8rem;
  color: var(--color-blue);
  font-weight: 500;
}

.atb_bot_stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  margin: 1.5rem 0;
  padding: 1rem;
  background: rgba(15, 23, 42, 0.5);
  border-radius: 0.75rem;
  border: 1px solid rgba(71, 85, 105, 0.2);
  position: relative;
  z-index: 1;
}

.atb_stat {
  text-align: center;
}

.atb_stat_label {
  font-size: 0.8rem;
  color: var(--text-muted);
  display: block;
}

.atb_btn_invest {
  padding: 0.875rem 1.5rem;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border: none;
  border-radius: 0.75rem;
  color: var(--text-primary);
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  margin-top: auto;
  position: relative;
  z-index: 1;
}

.atb_btn_invest:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@media (max-width: 768px) {
  .atb_header {
    padding: 2.5rem 1rem 2rem;
  }

  .atb_title {
