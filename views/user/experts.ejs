                  </div>
                  <div class="vx_stat_item">
                    <span class="vx_stat_label">Trades</span>
                    <span class="vx_stat_value"><%= expert.trades.toLocaleString() %></span>
                  </div>
                </div>

                <div class="vx_expert_actions">
                  <div class="vx_min_investment">
                    <span class="vx_min_label">Min. Investment</span>
                    <span class="vx_min_value">$<%= expert.minInvestment.toLocaleString() %></span>
                  </div>
                  <input type="number" class="vx_join_input" value="<%= expert.minInvestment %>" min="<%= expert.minInvestment %>">
                  <button class="vx_start_copy_btn" data-expert-id="<%= expert.id %>">Start Copying</button>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>

    </main>
  </div>

  <!-- How It Works Modal -->
  <div id="howModal" class="vx_modal" aria-hidden="true">
    <div class="vx_modal_card">
      <h3 class="vx_modal_title">How Copy Trading Works</h3>
      <div class="vx_modal_body">
        <p><strong>1. Choose an Expert</strong> — Browse verified expert traders and select one based on their performance.</p>
        <p><strong>2. Set Your Investment</strong> — Choose how much to allocate to copy their trades (minimum varies by expert).</p>
        <p><strong>3. Auto-Copy Trades</strong> — Trades are automatically copied to your portfolio in real-time, proportional to your investment.</p>
        <p><strong>4. Monitor & Profit</strong> — Track performance, manage your risk, and adjust allocations as needed.</p>
        <p><strong>5. Withdraw Anytime</strong> — Stop copying and withdraw your funds at any time, no lock-in period.</p>
      </div>
      <div class="vx_modal_actions">
        <button class="vx_btn_secondary" id="closeHow">Close</button>
      </div>
    </div>
  </div>

  <!-- Confirmation Modal -->
  <div id="confirmModal" class="vx_modal" aria-hidden="true">
    <div class="vx_modal_card">
      <h3 class="vx_modal_title" id="confirmTitle">Confirm Copy</h3>
      <div class="vx_modal_body" id="confirmBody">
        Are you sure you want to start copying?
      </div>
      <div class="vx_modal_actions">
        <button class="vx_btn_secondary" id="confirmCancel">Cancel</button>
        <button class="vx_btn_primary" id="confirmProceed">Start Copying</button>
      </div>
    </div>
  </div>

  <!-- Toast Notification -->
  <div id="vx_toast" class="vx_toast"></div>

  <script src="https://unpkg.com/lucide@latest"></script>
  <script>
    lucide.createIcons();

    (function() {
      function showToast(type, title, msg, timeout = 3000) {
        const toast = document.getElementById('vx_toast');
        toast.className = 'vx_toast ' + (type || '') + ' show';
        toast.innerHTML = '<div class="vx_toast_title">' + title + '</div><div class="vx_toast_body">' + msg + '</div>';
        if (timeout > 0) {
          setTimeout(() => toast.className = 'vx_toast', timeout);
        }
      }

      // How It Works Modal
      const openHow = document.getElementById('openHow');
      const howModal = document.getElementById('howModal');
      const closeHow = document.getElementById('closeHow');

      openHow.addEventListener('click', () => howModal.classList.add('show'));
      closeHow.addEventListener('click', () => howModal.classList.remove('show'));

      // Confirmation Flow
      let pending = null;
      const confirmModal = document.getElementById('confirmModal');
      const confirmTitle = document.getElementById('confirmTitle');
      const confirmBody = document.getElementById('confirmBody');
      const confirmCancel = document.getElementById('confirmCancel');
      const confirmProceed = document.getElementById('confirmProceed');

      document.querySelectorAll('.vx_start_copy_btn').forEach(function(btn) {
        btn.addEventListener('click', function() {
          const card = this.closest('.vx_expert_card');
          const expertId = card.getAttribute('data-expert-id');
          const name = card.querySelector('.vx_expert_name').textContent.trim();
          const input = card.querySelector('.vx_join_input');
          const amount = Number(input.value) || Number(input.getAttribute('min'));

          pending = { expertId, name, amount };
          confirmTitle.textContent = 'Copy ' + name;
          confirmBody.innerHTML = 'Start copying <strong>' + name + '</strong> with <strong>$' + amount.toLocaleString() + '</strong>?';
          confirmModal.classList.add('show');
        });
      });

      confirmCancel.addEventListener('click', function() {
        pending = null;
        confirmModal.classList.remove('show');
      });

      confirmProceed.addEventListener('click', function() {
        if (!pending) return;

        confirmProceed.disabled = true;
        confirmProceed.textContent = 'Processing...';

        fetch('/user/join-copy', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            amount: pending.amount,
            expertId: pending.expertId,
            expertName: pending.name
          })
        })
          .then(r => r.json())
          .then(function(data) {
            confirmProceed.disabled = false;
            confirmProceed.textContent = 'Start Copying';
            confirmModal.classList.remove('show');

            if (!data || !data.success) {
              showToast('warn', 'Unable to Copy', data && data.message ? data.message : 'Failed');
              if (data && data.redirect) {
                setTimeout(() => window.location.href = data.redirect, 800);
              }
              return;
            }

            showToast('success', 'Copy Started', 'You are now copying ' + pending.name + ' with $' + pending.amount.toLocaleString());
            setTimeout(() => window.location.reload(), 1200);
          })
          .catch(function(err) {
            console.error(err);
            confirmProceed.disabled = false;
            confirmProceed.textContent = 'Start Copying';
            confirmModal.classList.remove('show');
            showToast('warn', 'Error', 'Network error, try again');
          });
      });

      // View Profile Buttons
      document.querySelectorAll('.vx_expert_view_btn').forEach(function(btn) {
        btn.addEventListener('click', function(e) {
          e.preventDefault();
          const expertId = this.getAttribute('data-expert-id');
          window.location.href = '/expert/' + expertId;
        });
      });

    })();
  </script>

  <script src="/js/dashboard.js"></script>
</body>
</html>