  <div class="vx_rt_toast" id="vxToast">
    <div class="vx_rt_toast_icon">‚úì</div>
    <div class="vx_rt_toast_message" id="vxToastMessage"></div>
  </div>

  <script>
    (function() {
      let vxUploadedFile = null;
      const vxUploadArea = document.getElementById('vxUploadArea');
      const vxFileInput = document.getElementById('vxFileInput');
      const vxFilePreview = document.getElementById('vxFilePreview');
      const vxSubmitBtn = document.getElementById('vxSubmitBtn');

      ['dragenter','dragover','dragleave','drop'].forEach(evt => {
        vxUploadArea.addEventListener(evt, vxPreventDefaults, false);
      });

      function vxPreventDefaults(e) {
        e.preventDefault();
        e.stopPropagation();
      }

      ['dragenter','dragover'].forEach(evt => {
        vxUploadArea.addEventListener(evt, () => {
          vxUploadArea.classList.add('dragover');
        });
      });

      ['dragleave','drop'].forEach(evt => {
        vxUploadArea.addEventListener(evt, () => {
          vxUploadArea.classList.remove('dragover');
        });
      });

      vxUploadArea.addEventListener('drop', (e) => {
        const files = e.dataTransfer.files;
        if(files.length) vxHandleFile(files[0]);
      });

      vxFileInput.addEventListener('change', (e) => {
        if(e.target.files.length) vxHandleFile(e.target.files[0]);
      });

      function vxHandleFile(file) {
        if(!file.type.match('image.*') && file.type !== 'application/pdf') {
          vxShowToast('Please upload an image or PDF file');
          return;
        }
        if(file.size > 10 * 1024 * 1024) {
          vxShowToast('File size must be less than 10MB');
          return;
        }
        vxUploadedFile = file;
        vxDisplayFilePreview(file);
        vxSubmitBtn.disabled = false;
      }

      function vxDisplayFilePreview(file) {
        const fileSize = (file.size / 1024).toFixed(2);
        vxFilePreview.innerHTML = '\n        <div class="vx_rt_file_preview">\n          <div class="vx_rt_file_info">\n            <div class="vx_rt_file_icon">üìÑ</div>\n            <div class="vx_rt_file_details">\n              <h4>' + file.name + '</h4>\n              <div class="vx_rt_file_size">' + fileSize + ' KB</div>\n            </div>\n          </div>\n          <div class="vx_rt_remove_file" onclick="vxRemoveFile()">Remove file</div>\n        </div>\n      ';
        vxFilePreview.style.display = 'block';
        vxUploadArea.style.display = 'none';
      }

      window.vxRemoveFile = function() {
        vxUploadedFile = null;
        vxFileInput.value = '';
        vxFilePreview.style.display = 'none';
        vxUploadArea.style.display = 'block';
        vxSubmitBtn.disabled = true;
      };

      function vxCopyAddress() {
        const address = document.getElementById('vxWalletAddress').textContent;
        navigator.clipboard.writeText(address).then(() => {
          document.getElementById('vxCopyBtnText').textContent = 'Copied!';
          vxShowToast('Wallet address copied to clipboard');
          setTimeout(() => {
            document.getElementById('vxCopyBtnText').textContent = 'Copy Address';
          }, 2000);
        }).catch(() => {
          vxShowToast('Failed to copy address');
        });
      }

      document.getElementById('vxCopyBtn').addEventListener('click', vxCopyAddress);

      window.vxDownloadQR = function() {
        const qrImage = document.querySelector('.vx_rt_qr_image');
        const link = document.createElement('a');
        link.href = qrImage.src;
        link.download = 'payment-qr-code.png';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
        vxShowToast('QR code downloaded successfully');
      };

      vxSubmitBtn.addEventListener('click', () => {
        if(!vxUploadedFile) {
          vxShowToast('Please upload payment proof');
          return;
        }

        vxSubmitBtn.disabled = true;
        vxSubmitBtn.innerHTML = '<span>‚è≥</span><span>Processing...</span>';

        const payload = {
          amount: '<%= amount %>',
          cryptocurrency: '<%= method %>',
          proof: (vxUploadedFile && vxUploadedFile.name) ? vxUploadedFile.name : 'proof'
        };

        fetch('/user/payment/submit', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        })
        .then(r => r.json())
        .then(data => {
          if(!data || !data.success) {
            vxShowToast(data && data.message ? data.message : 'Submission failed', 'error');
            vxSubmitBtn.disabled = false;
            vxSubmitBtn.innerHTML = '<span>‚úàÔ∏è</span><span>Submit Payment Proof</span>';
            return;
          }
          vxShowToast('Payment proof submitted successfully. Admin will review shortly.');
          vxSubmitBtn.innerHTML = '<span>‚úì</span><span>Submitted Successfully</span>';
          vxSubmitBtn.style.background = 'linear-gradient(135deg, #10b981, #059669)';
          setTimeout(() => {
            window.location.href = (data.redirect || '/user/dashboard');
          }, 1800);
        })
        .catch(err => {
          console.error(err);
          vxShowToast('Network error occurred', 'error');
          vxSubmitBtn.disabled = false;
          vxSubmitBtn.innerHTML = '<span>‚úàÔ∏è</span><span>Submit Payment Proof</span>';
        });
      });

      function vxShowToast(msg, type) {
        const toast = document.getElementById('vxToast');
        const message = document.getElementById('vxToastMessage');
        message.textContent = msg;
        toast.classList.add('show');
        setTimeout(() => {
          toast.classList.remove('show');
        }, 3000);
      }
    })();
  </script>
