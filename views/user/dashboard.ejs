            "enable_publishing": false,
            "allow_symbol_change": true,
            "container_id": "tradingviewWidgetDash"
          });
        }catch(e){
          // fallback handled below
        }
      } else if (widgetContainer) {
        // Fallback: simple chart mockup canvas
        widgetContainer.innerHTML = `
          <div style="background: #0a0e1a; border-radius: 6px; padding: 12px; height: 360px; display: flex; flex-direction: column;">
            <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:8px;">
              <div style="color:#9ca3af;font-size:12px">LIVE ‚Ä¢ BTC/USD</div>
              <div style="color:#9ca3af;font-size:12px">00:00:00</div>
            </div>
            <div style="flex:1;position:relative;">
              <canvas id="chartCanvasDash" style="width:100%;height:100%;display:block;"></canvas>
            </div>
          </div>
        `;

        // draw simple candlestick-like mock
        const canvas = document.getElementById('chartCanvasDash');
        if(canvas){
          const ctx = canvas.getContext('2d');
          function resize(){ canvas.width = canvas.offsetWidth; canvas.height = canvas.offsetHeight; }
          function draw(){
            resize();
            ctx.clearRect(0,0,canvas.width,canvas.height);
            // grid
            ctx.strokeStyle = 'rgba(255,255,255,0.03)'; ctx.lineWidth=1;
            for(let y=0;y<canvas.height;y+=40){ ctx.beginPath(); ctx.moveTo(0,y); ctx.lineTo(canvas.width,y); ctx.stroke(); }
            // simple line
            ctx.beginPath(); ctx.lineWidth=2; ctx.strokeStyle='rgba(47,128,237,0.9)';
            for(let i=0;i<canvas.width;i+=6){ const x=i; const y = canvas.height*0.55 + Math.sin(i/40 + Date.now()/2000)*24; if(i===0) ctx.moveTo(x,y); else ctx.lineTo(x,y); }
            ctx.stroke();
            requestAnimationFrame(draw);
          }
          draw();
          window.addEventListener('resize', resize);
        }
      }
    }

    // Load TradingView script once and init
    (function(){
      var s = document.createElement('script'); s.src = 'https://s3.tradingview.com/tv.js'; s.async = true;
      s.onload = initTradingViewWidgetDash;
      document.head.appendChild(s);
      // fallback init if library doesn't load in time
      setTimeout(function(){ if(!document.querySelector('#tradingviewWidgetDash iframe')) initTradingViewWidgetDash(); }, 2100);
    })();
  </script>
