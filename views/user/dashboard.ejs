  <style>
:root {
  --primary-bg: #0a0e1a;
  --secondary-bg: #151b2b;
  --card-bg: #1a2332;
  --text-primary: #ffffff;
  --text-secondary: #a0aec0;
  --text-muted: #6b7280;
  --accent-blue: #3b82f6;
  --accent-blue-hover: #2563eb;
  --success-green: #10b981;
  --success-green-hover: #059669;
  --danger-red: #ef4444;
  --border-color: rgba(255, 255, 255, 0.08);
  --border-hover: rgba(255, 255, 255, 0.15);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  background: var(--primary-bg);
  color: var(--text-primary);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.dashboard-container {
  min-height: 100vh;
  display: flex;
  background: var(--primary-bg);
}

.dashboard-content {
  flex: 1;
  padding: 2rem;
  overflow-y: auto;
  max-width: 100%;
}

@media (max-width: 768px) {
  .dashboard-content {
    padding: 1rem;
  }
}

.vx_dashboard_header_section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  padding-bottom: 1.5rem;
  border-bottom: 1px solid var(--border-color);
}

.vx_header_title h1 {
  font-size: 1.875rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 0.25rem;
  letter-spacing: -0.025em;
}

.vx_header_title p {
  color: var(--text-secondary);
  font-size: 0.875rem;
  font-weight: 400;
}

.vx_btn_invest_now {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: var(--success-green);
  color: white;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.95rem;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
}

.vx_btn_invest_now:hover {
  background: var(--success-green-hover);
  transform: translateY(-1px);
  box-shadow: 0 6px 16px rgba(16, 185, 129, 0.3);
}

.vx_btn_invest_now svg {
  width: 18px;
  height: 18px;
}

@media (max-width: 768px) {
  .vx_dashboard_header_section {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  .vx_header_title h1 {
    font-size: 1.5rem;
  }

  .vx_btn_invest_now {
    width: 100%;
    justify-content: center;
  }
}

.vx_account_balance_card {
  background: linear-gradient(135deg, var(--card-bg) 0%, #1e2a3f 100%);
  border: 1px solid var(--border-color);
  border-radius: 16px;
  padding: 2rem;
  margin-bottom: 2rem;
  text-align: center;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

.vx_account_balance_card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(90deg, var(--accent-blue), var(--success-green));
}

.vx_balance_icon {
  font-size: 2rem;
  margin-bottom: 0.75rem;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  height: 60px;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 50%;
}

.vx_balance_icon svg {
  width: 32px;
  height: 32px;
  color: var(--accent-blue);
}

.vx_balance_title {
  font-size: 0.875rem;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 0.25rem;
  font-weight: 600;
}

.vx_balance_subtitle {
  font-size: 0.8rem;
  color: var(--text-muted);
  margin-bottom: 1rem;
}

.vx_balance_amount {
  font-size: 2.75rem;
  font-weight: 900;
  color: var(--text-primary);
  margin-bottom: 1rem;
  letter-spacing: -0.02em;
}

.vx_balance_status {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
  margin: 0.25rem 0.5rem;
  padding: 0.375rem 0.75rem;
  border-radius: 6px;
  font-weight: 600;
}

.vx_balance_status svg {
  width: 16px;
  height: 16px;
}

.vx_balance_status.success {
  color: var(--success-green);
  background: rgba(16, 185, 129, 0.1);
}

.vx_balance_status.unverified {
  color: var(--danger-red);
  background: rgba(239, 68, 68, 0.1);
}

.vx_balance_updated {
  font-size: 0.75rem;
  color: var(--text-muted);
  margin-bottom: 1.5rem;
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
}

.vx_balance_updated svg {
  width: 14px;
  height: 14px;
}

.vx_balance_actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
  max-width: 500px;
  margin: 0 auto;
}

.vx_btn_deposit,
.vx_btn_withdraw {
  padding: 0.875rem 1.5rem;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.vx_btn_deposit svg,
.vx_btn_withdraw svg {
  width: 18px;
  height: 18px;
}

.vx_btn_deposit {
  background: var(--success-green);
  color: white;
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
}

.vx_btn_deposit:hover {
  background: var(--success-green-hover);
  transform: translateY(-1px);
  box-shadow: 0 6px 16px rgba(16, 185, 129, 0.3);
}

.vx_btn_withdraw {
  background: rgba(59, 130, 246, 0.1);
  color: var(--accent-blue);
  border: 1px solid rgba(59, 130, 246, 0.3);
}

.vx_btn_withdraw:hover {
  background: rgba(59, 130, 246, 0.2);
  border-color: rgba(59, 130, 246, 0.5);
  transform: translateY(-1px);
}

@media (max-width: 768px) {
  .vx_account_balance_card {
    padding: 1.5rem;
  }

  .vx_balance_amount {
    font-size: 2rem;
  }
}

.vx_stats_row {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.vx_stat_card {
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  padding: 1.5rem;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.vx_stat_card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: var(--accent-blue);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.vx_stat_card:hover::before {
  transform: scaleX(1);
}

.vx_stat_card:hover {
  border-color: var(--border-hover);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
}

.vx_stat_header {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.75rem;
}

.vx_stat_icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  border-radius: 8px;
  background: rgba(59, 130, 246, 0.1);
}

.vx_stat_icon svg {
  width: 18px;
  height: 18px;
  color: var(--accent-blue);
}

.vx_stat_label {
  font-size: 0.75rem;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 600;
}

.vx_stat_value {
  font-size: 1.75rem;
  font-weight: 800;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
  letter-spacing: -0.02em;
}

.vx_stat_subtitle {
  font-size: 0.7rem;
  color: var(--text-muted);
  display: flex;
  align-items: center;
  gap: 0.25rem;
}

.vx_stat_subtitle svg {
  width: 12px;
  height: 12px;
}

@media (max-width: 1024px) {
  .vx_stats_row {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
}

@media (max-width: 768px) {
  .vx_stats_row {
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .vx_stat_card {
    padding: 1rem;
  }

  .vx_stat_value {
    font-size: 1.5rem;
  }
}

.vx_verification_section {
