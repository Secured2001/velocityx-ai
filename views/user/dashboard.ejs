function createSparklineCanvas(change) {
  const canvas = document.createElement('canvas');
  canvas.width = 120;
  canvas.height = 40;
  const ctx = canvas.getContext('2d');

  const points = 20;
  const data = [];
  let value = 50;

  for (let i = 0; i < points; i++) {
    value += (Math.random() - 0.5) * 10;
    value = Math.max(10, Math.min(90, value));
    data.push(value);
  }

  if (change > 0) {
    data[data.length - 1] = Math.max(...data);
  } else {
    data[data.length - 1] = Math.min(...data);
  }

  ctx.strokeStyle = change > 0 ? '#10b981' : '#ef4444';
  ctx.lineWidth = 2;
  ctx.lineCap = 'round';
  ctx.lineJoin = 'round';

  ctx.beginPath();
  for (let i = 0; i < data.length; i++) {
    const x = (i / (data.length - 1)) * canvas.width;
    const y = canvas.height - (data[i] / 100) * canvas.height;

    if (i === 0) {
      ctx.moveTo(x, y);
    } else {
      ctx.lineTo(x, y);
    }
  }
  ctx.stroke();

  const gradient = ctx.createLinearGradient(0, 0, 0, canvas.height);
  gradient.addColorStop(0, change > 0 ? 'rgba(16, 185, 129, 0.2)' : 'rgba(239, 68, 68, 0.2)');
  gradient.addColorStop(1, 'rgba(16, 185, 129, 0)');

  ctx.lineTo(canvas.width, canvas.height);
  ctx.lineTo(0, canvas.height);
  ctx.closePath();
  ctx.fillStyle = gradient;
  ctx.fill();

  return canvas;
}

function renderMarketTickers() {
  const container = document.getElementById('marketTickersContainer');
  if (!container) return;

  container.innerHTML = '';

  marketPairs.forEach(pair => {
    const changeClass = pair.change > 0 ? 'up' : 'down';
    const changeSign = pair.change > 0 ? '+' : '';
    const decimals = pair.price > 1000 ? 2 : pair.price > 10 ? 3 : 5;

    const card = document.createElement('a');
    card.href = pair.tvLink;
    card.target = '_blank';
    card.rel = 'noopener noreferrer';
    card.className = 'vx_ticker_card';

    card.innerHTML = `
      <div class="vx_ticker_header">
        <img src="${pair.logo}" alt="${pair.name}" class="vx_ticker_logo" onerror="this.style.display='none'">
        <div class="vx_ticker_info">
          <div class="vx_ticker_pair">${pair.name}</div>
          <div class="vx_ticker_exchange">${pair.exchange}</div>
        </div>
      </div>
      <div class="vx_ticker_price">$${pair.price.toLocaleString('en-US', { minimumFractionDigits: decimals, maximumFractionDigits: decimals })}</div>
      <div class="vx_ticker_change ${changeClass}">
        <i data-lucide="${pair.change > 0 ? 'trending-up' : 'trending-down'}"></i>
        ${changeSign}${pair.change.toFixed(2)}%
      </div>
      <div class="vx_ticker_chart"></div>
    `;

    const chartContainer = card.querySelector('.vx_ticker_chart');
    const sparkline = createSparklineCanvas(pair.change);
    chartContainer.appendChild(sparkline);

    container.appendChild(card);
  });

  lucide.createIcons();
}

function updateMarketTickers() {
  marketPairs.forEach(pair => {
    const randomChange = (Math.random() - 0.5) * 0.3;
    pair.change = Math.max(-10, Math.min(10, pair.change + randomChange));
    pair.price = pair.price * (1 + randomChange / 100);
  });
  renderMarketTickers();
}

function initializeCopyButton() {
  const copyBtn = document.querySelector('.vx_btn_copy');
  if (!copyBtn) return;

  copyBtn.addEventListener('click', function () {
    const input = document.querySelector('.vx_referral_link_input input');
    if (input) {
      input.select();
      document.execCommand('copy');

      const icon = this.querySelector('i');
      const originalIcon = icon.getAttribute('data-lucide');

      icon.setAttribute('data-lucide', 'check');
      lucide.createIcons();

      const originalText = this.childNodes[1].textContent;
      this.childNodes[1].textContent = 'Copied!';

      setTimeout(() => {
        icon.setAttribute('data-lucide', originalIcon);
        lucide.createIcons();
        this.childNodes[1].textContent = originalText;
      }, 2000);
    }
  });
}

function initializeModal() {
  const modal = document.getElementById('logoutModal');
  if (!modal) return;

  const confirmBtn = document.getElementById('confirmLogout');
  const cancelBtn = document.getElementById('cancelLogout');

  const logoutButtons = document.querySelectorAll('[data-action="logout"]');
  logoutButtons.forEach(btn => {
    btn.addEventListener('click', e => {
      e.preventDefault();
      modal.classList.add('show');
    });
  });

  if (cancelBtn) {
    cancelBtn.addEventListener('click', () => {
      modal.classList.remove('show');
    });
  }

  if (confirmBtn) {
    confirmBtn.addEventListener('click', () => {
      window.location.href = '/logout';
    });
  }

  modal.addEventListener('click', e => {
    if (e.target === modal) {
      modal.classList.remove('show');
    }
  });
}

document.addEventListener('DOMContentLoaded', function () {
  lucide.createIcons();

  renderMarketTickers();
  updateMarketTickers();
  setInterval(updateMarketTickers, 8000);

  initializeCopyButton();
  initializeModal();
});
