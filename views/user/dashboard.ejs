function renderMarketTickers() {
  const container = document.getElementById('marketTickersContainer');
  if (!container) return;

  container.innerHTML = '';

  marketPairs.forEach(pair => {
    const changeClass = pair.change > 0 ? 'up' : 'down';
    const changeSign = pair.change > 0 ? '+' : '';
    const decimals = pair.price > 1000 ? 2 : pair.price > 10 ? 3 : 5;

    const card = document.createElement('a');
    card.href = pair.tvLink;
    card.target = '_blank';
    card.rel = 'noopener noreferrer';
    card.className = 'vx_ticker_card';

    card.innerHTML = `
      <div class="vx_ticker_header">
        <img src="${pair.logo}" alt="${pair.name}" class="vx_ticker_logo" onerror="this.style.display='none'">
        <div class="vx_ticker_info">
          <div class="vx_ticker_pair">${pair.name}</div>
          <div class="vx_ticker_exchange">${pair.exchange}</div>
        </div>
      </div>
      <div class="vx_ticker_price">$${pair.price.toLocaleString('en-US', { minimumFractionDigits: decimals, maximumFractionDigits: decimals })}</div>
      <div class="vx_ticker_change ${changeClass}">
        ${changeSign}${pair.change.toFixed(2)}%
      </div>
    `;

    container.appendChild(card);
  });
}

function updateMarketTickers() {
  marketPairs.forEach(pair => {
    const randomChange = (Math.random() - 0.5) * 0.3;
    pair.change = Math.max(-10, Math.min(10, pair.change + randomChange));
    pair.price = pair.price * (1 + randomChange / 100);
  });
  renderMarketTickers();
}

function initializeCopyButton() {
  const copyBtn = document.querySelector('.vx_btn_copy');
  if (!copyBtn) return;

  copyBtn.addEventListener('click', function () {
    const input = document.querySelector('.vx_referral_link_input input');
    if (input) {
      input.select();
      document.execCommand('copy');

      const originalText = this.textContent;
      this.textContent = 'Copied!';
      setTimeout(() => {
        this.textContent = originalText;
      }, 2000);
    }
  });
}

function initializeModal() {
  const modal = document.getElementById('logoutModal');
  if (!modal) return;

  const confirmBtn = document.getElementById('confirmLogout');
  const cancelBtn = document.getElementById('cancelLogout');

  const logoutButtons = document.querySelectorAll('[data-action="logout"]');
  logoutButtons.forEach(btn => {
    btn.addEventListener('click', e => {
      e.preventDefault();
      modal.classList.add('show');
    });
  });

  if (cancelBtn) {
    cancelBtn.addEventListener('click', () => {
      modal.classList.remove('show');
    });
  }

  if (confirmBtn) {
    confirmBtn.addEventListener('click', () => {
      window.location.href = '/logout';
    });
  }

  modal.addEventListener('click', e => {
    if (e.target === modal) {
      modal.classList.remove('show');
    }
  });
}

