function initializeMarketOverview() {
  const container = document.getElementById('marketTickerContainer');
  if (!container) return;

  renderMarketTickers();
}

function renderMarketTickers() {
  const container = document.getElementById('marketTickerContainer');
  if (!container) return;

  container.innerHTML = '';

  marketPairs.forEach(pair => {
    const changeClass = pair.change > 0 ? 'up' : 'down';
    const changeSign = pair.change > 0 ? '+' : '';

    const ticker = document.createElement('div');
    ticker.className = 'market-ticker-item';
    ticker.innerHTML = `
      <div class="ticker-icon">${pair.icon}</div>
      <div class="ticker-info">
        <div class="ticker-symbol">${pair.symbol}</div>
        <div class="ticker-price">$${pair.price.toLocaleString('en-US', { minimumFractionDigits: pair.decimals, maximumFractionDigits: pair.decimals })}</div>
      </div>
      <div class="ticker-change ${changeClass}">
        <span>${changeSign}${pair.change.toFixed(2)}%</span>
      </div>
    `;
    container.appendChild(ticker);
  });
}

function updateMarketTickers() {
  marketPairs.forEach(pair => {
    const randomChange = (Math.random() - 0.5) * 0.5;
    pair.change += randomChange;
    pair.price = pair.price * (1 + (randomChange / 100));
  });

  renderMarketTickers();
}

function initializeCopyButton() {
  const copyBtn = document.querySelector('.vx_btn_copy');
  if (!copyBtn) return;

  copyBtn.addEventListener('click', function() {
