  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 0.25rem;
}

.vx_verification_text p {
  color: var(--text-secondary);
  font-size: 0.8rem;
}

.vx_btn_view_details {
  padding: 0.75rem 1.5rem;
  background: var(--accent-blue);
  color: white;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  font-size: 0.875rem;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
}

.vx_btn_view_details svg {
  width: 16px;
  height: 16px;
}

.vx_btn_view_details:hover {
  background: var(--accent-blue-hover);
  transform: translateY(-1px);
  box-shadow: 0 6px 16px rgba(59, 130, 246, 0.3);
}

@media (max-width: 768px) {
  .vx_verification_section {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  .vx_verification_content {
    flex-direction: column;
  }
}

.vx_layout_two_col {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  margin-bottom: 2rem;
}

@media (max-width: 1024px) {
  .vx_layout_two_col {
    grid-template-columns: 1fr;
  }
}

.vx_section_trades,
.vx_section_referrals {
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  padding: 1.5rem;
