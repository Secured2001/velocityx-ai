    /* ============================================
     VELOCITYX-AI TRADING DASHBOARD
     Professional Dark Fintech Design
     ============================================ */

:root {
  --primary-bg: #0a0f1f;
  --secondary-bg: #111827;
  --card-bg: #1a2332;
  --card-border: #1e3a5f;
  --text-primary: #f9fafb;
  --text-secondary: #9ca3af;
  --text-muted: #6b7280;
  --accent-blue: #3b82f6;
  --success-green: #10b981;
  --danger-red: #ef4444;
  --warning-orange: #f59e0b;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: var(--primary-bg);
  color: var(--text-primary);
  line-height: 1.6;
}

.dashboard-container {
  min-height: 100vh;
  display: flex;
  background: var(--primary-bg);
}

.dashboard-content {
  flex: 1;
  padding: 2rem;
  /* margin-left: 60px; */
  overflow-y: auto;
}

@media (max-width: 1024px) {
  .dashboard-content {
    margin-left: 0;
    padding: 1rem;
  }
}

/* ============================================
   DASHBOARD HEADER
   ============================================ */

.vx_dashboard_header_section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  background: linear-gradient(135deg, #1a2332 0%, #1e3a5f 100%);
  border: 1px solid rgba(59, 130, 246, 0.2);
  border-radius: 16px;
  padding: 2rem;
}

.vx_header_title h1 {
  font-size: 2rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
  letter-spacing: -0.02em;
}

.vx_header_title p {
  color: var(--text-secondary);
  font-size: 0.95rem;
}

.vx_btn_invest_now {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.875rem 1.5rem;
  background: var(--success-green);
  color: white;
  border: none;
  border-radius: 12px;
  font-weight: 600;
  font-size: 1rem;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.vx_btn_invest_now:hover {
  background: #059669;
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(16, 185, 129, 0.4);
}

@media (max-width: 768px) {
  .vx_dashboard_header_section {
    flex-direction: column;
    gap: 1.5rem;
  }
}

/* ============================================
   STATS ROW
   ============================================ */

.vx_stats_row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
  margin-bottom: 2rem;
}

.vx_stat_card {
  background: linear-gradient(135deg, #1a2332 0%, #1e3a5f 100%);
  border: 1px solid rgba(59, 130, 246, 0.1);
  border-radius: 12px;
  padding: 1.5rem;
  transition: all 0.3s ease;
}

.vx_stat_card:hover {
  border-color: var(--accent-blue);
  box-shadow: 0 8px 20px rgba(59, 130, 246, 0.2);
}

.vx_stat_card label {
  display: block;
  font-size: 0.75rem;
  font-weight: 600;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-bottom: 0.75rem;
}

.vx_stat_value {
  font-size: 1.75rem;
  font-weight: 800;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.vx_stat_label {
  display: block;
  font-size: 0.75rem;
  color: var(--text-muted);
}

/* ============================================
   VERIFICATION SECTION
   ============================================ */

