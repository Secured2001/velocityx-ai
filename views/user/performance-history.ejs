<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Performance History</title>
  <link rel="stylesheet" href="/css/styles.css">

  <style>
    /* Scoped styles for vx_performance_history_section */
    .vx_performance_history_section {
      background: linear-gradient(135deg, #0a1628 0%, #0d1b2a 100%);
      border-radius: 16px;
      padding: 0;
      margin: 0;
      position: relative;
      overflow: hidden;
    }

    .vx_performance_history_section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.5), transparent);
    }

    .vx_perf_header_area {
      padding: 32px 32px 24px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
      background: linear-gradient(180deg, rgba(15, 23, 42, 0.6) 0%, transparent 100%);
    }

    .vx_perf_header_content {
      display: flex;
      align-items: center;
      gap: 16px;
      margin-bottom: 8px;
    }

    .vx_perf_icon_wrapper {
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(147, 51, 234, 0.2));
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 1px solid rgba(59, 130, 246, 0.3);
      animation: vx_perf_pulse_glow 3s ease-in-out infinite;
    }

    @keyframes vx_perf_pulse_glow {
      0%, 100% { box-shadow: 0 0 20px rgba(59, 130, 246, 0.3); }
      50% { box-shadow: 0 0 30px rgba(59, 130, 246, 0.6); }
    }

    .vx_perf_icon_wrapper svg {
      width: 24px;
      height: 24px;
      color: #3b82f6;
    }

    .vx_perf_title_group h2 {
      color: #f1f5f9;
      font-size: 28px;
      font-weight: 600;
      margin: 0 0 4px 0;
      letter-spacing: -0.5px;
    }

    .vx_perf_subtitle {
      color: #94a3b8;
      font-size: 14px;
      margin: 0;
      font-weight: 400;
    }

    .vx_perf_main_content {
      padding: 32px;
    }

    .vx_perf_tabs_container {
      display: flex;
      gap: 12px;
      margin-bottom: 32px;
      flex-wrap: wrap;
    }

    .vx_perf_tab_button {
      background: rgba(30, 41, 59, 0.6);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      padding: 12px 20px;
      color: #94a3b8;
      font-size: 13px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex;
      align-items: center;
      gap: 8px;
      position: relative;
      overflow: hidden;
    }

    .vx_perf_tab_button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.1), transparent);
      transition: left 0.5s;
    }

    .vx_perf_tab_button:hover::before {
      left: 100%;
    }

    .vx_perf_tab_button:hover {
      background: rgba(59, 130, 246, 0.15);
      border-color: rgba(59, 130, 246, 0.4);
      color: #3b82f6;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
    }

    .vx_perf_tab_button.vx_perf_active_tab {
      background: linear-gradient(135deg, rgba(59, 130, 246, 0.25), rgba(147, 51, 234, 0.15));
      border-color: #3b82f6;
      color: #3b82f6;
      box-shadow: 0 4px 16px rgba(59, 130, 246, 0.3), inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }

    .vx_perf_section_header {
      margin-bottom: 24px;
    }

    .vx_perf_section_title {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
      margin-bottom: 8px;
    }

    .vx_perf_section_title h3 {
      color: #f1f5f9;
      font-size: 22px;
      font-weight: 600;
      margin: 0;
    }

    .vx_perf_ytd_badge {
      color: #94a3b8;
      font-size: 13px;
      display: flex;
      gap: 8px;
      align-items: center;
    }

    .vx_perf_ytd_value {
      color: #22c55e;
      font-weight: 700;
      font-size: 14px;
    }

    .vx_perf_subtitle_text {
      color: #64748b;
      font-size: 13px;
      margin: 0;
    }

    .vx_perf_chart_container {
      background: rgba(15, 23, 42, 0.4);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 12px;
      padding: 24px;
      margin-bottom: 24px;
      position: relative;
      overflow: hidden;
      animation: vx_perf_fadeIn 0.5s ease;
    }

    @keyframes vx_perf_fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .vx_perf_chart_wrapper {
      position: relative;
      width: 100%;
      height: 300px;
      margin-bottom: 16px;
    }

    .vx_perf_canvas {
      width: 100%;
      height: 100%;
    }

    .vx_perf_chart_grid {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      display: grid;
      grid-template-rows: repeat(5, 1fr);
      pointer-events: none;
    }

    .vx_perf_grid_line {
      border-bottom: 1px dashed rgba(255, 255, 255, 0.05);
    }

    .vx_perf_legend {
      display: flex;
      gap: 24px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .vx_perf_legend_item {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 13px;
      color: #94a3b8;
    }

    .vx_perf_legend_dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
    }

    .vx_perf_legend_dot.vx_perf_profit {
      background: #22c55e;
      box-shadow: 0 0 8px rgba(34, 197, 94, 0.5);
    }

    .vx_perf_legend_dot.vx_perf_loss {
      background: #ef4444;
      box-shadow: 0 0 8px rgba(239, 68, 68, 0.5);
    }

    .vx_perf_stats_grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
      margin-bottom: 28px;
    }

    .vx_perf_stat_card {
      background: rgba(30, 41, 59, 0.6);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 12px;
      padding: 20px;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .vx_perf_stat_card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.5), transparent);
    }

    .vx_perf_stat_card:hover {
      background: rgba(30, 41, 59, 0.8);
      border-color: rgba(59, 130, 246, 0.3);
      transform: translateY(-4px);
      box-shadow: 0 8px 24px rgba(59, 130, 246, 0.2);
    }

    .vx_perf_stat_icon {
      width: 40px;
      height: 40px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 12px;
      font-size: 20px;
    }

    .vx_perf_stat_icon.vx_perf_total {
      background: rgba(59, 130, 246, 0.2);
    }

    .vx_perf_stat_icon.vx_perf_wins {
      background: rgba(34, 197, 94, 0.2);
    }

    .vx_perf_stat_icon.vx_perf_losses {
      background: rgba(239, 68, 68, 0.2);
    }

    .vx_perf_stat_icon.vx_perf_active {
      background: rgba(147, 51, 234, 0.2);
    }

    .vx_perf_stat_value {
      color: #f1f5f9;
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 4px;
    }

    .vx_perf_stat_label {
      color: #94a3b8;
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      margin-bottom: 8px;
    }

    .vx_perf_stat_change {
      font-size: 12px;
      display: flex;
      align-items: center;
      gap: 4px;
    }

    .vx_perf_stat_change.vx_perf_positive {
      color: #22c55e;
    }

    .vx_perf_stat_change.vx_perf_negative {
      color: #ef4444;
    }

    .vx_perf_empty_state {
      padding: 80px 20px;
      text-align: center;
      animation: vx_perf_fadeIn 0.5s ease;
    }

    .vx_perf_empty_icon {
      width: 100px;
      height: 100px;
      margin: 0 auto 24px;
      background: rgba(30, 41, 59, 0.6);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid rgba(59, 130, 246, 0.2);
      font-size: 48px;
    }

    .vx_perf_empty_title {
      color: #f1f5f9;
      font-size: 20px;
      font-weight: 600;
      margin: 0 0 8px 0;
    }

    .vx_perf_empty_subtitle {
      color: #64748b;
      font-size: 14px;
      margin: 0;
    }

    .vx_perf_cta_area {
      padding: 24px 32px;
      border-top: 1px solid rgba(255, 255, 255, 0.08);
      background: rgba(15, 23, 42, 0.4);
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 16px;
    }

    .vx_perf_cta_stats {
      display: flex;
      gap: 32px;
      flex-wrap: wrap;
    }

    .vx_perf_cta_stat {
      display: flex;
      flex-direction: column;
      gap: 4px;
    }

    .vx_perf_cta_label {
      color: #64748b;
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .vx_perf_cta_value {
      color: #f1f5f9;
      font-size: 22px;
      font-weight: 700;
    }

    .vx_perf_cta_value.vx_perf_positive {
      color: #22c55e;
    }

    .vx_perf_cta_value.vx_perf_negative {
      color: #ef4444;
    }

    .vx_perf_cta_buttons {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }

    .vx_perf_btn {
      padding: 12px 24px;
      border-radius: 10px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 8px;
      border: none;
    }

    .vx_perf_btn_primary {
      background: linear-gradient(135deg, #3b82f6, #2563eb);
      color: white;
      box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    }

    .vx_perf_btn_primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
    }

    .vx_perf_btn_secondary {
      background: rgba(30, 41, 59, 0.6);
      color: #94a3b8;
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .vx_perf_btn_secondary:hover {
      background: rgba(59, 130, 246, 0.15);
      color: #3b82f6;
      border-color: rgba(59, 130, 246, 0.4);
    }

    .vx_perf_btn svg {
      width: 16px;
      height: 16px;
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
      .vx_perf_header_area {
        padding: 24px 24px 20px;
      }

      .vx_perf_main_content {
        padding: 24px;
      }

      .vx_perf_cta_area {
        padding: 20px 24px;
      }

      .vx_perf_chart_wrapper {
        height: 250px;
      }

      .vx_perf_stats_grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 768px) {
      .vx_perf_header_area {
        padding: 20px 16px 16px;
      }

      .vx_perf_title_group h2 {
        font-size: 22px;
      }

      .vx_perf_icon_wrapper {
        width: 40px;
        height: 40px;
      }

      .vx_perf_main_content {
        padding: 20px 16px;
      }

      .vx_perf_chart_wrapper {
        height: 220px;
      }

      .vx_perf_stats_grid {
        grid-template-columns: 1fr;
      }

      .vx_perf_cta_area {
        padding: 16px;
        flex-direction: column;
        align-items: stretch;
      }

      .vx_perf_cta_stats {
        justify-content: space-between;
        width: 100%;
      }

      .vx_perf_cta_buttons {
        width: 100%;
      }

      .vx_perf_btn {
        flex: 1;
        justify-content: center;
      }
    }

    @media (max-width: 480px) {
      .vx_perf_tabs_container {
        gap: 8px;
      }

      .vx_perf_tab_button {
        flex: 1;
        justify-content: center;
        padding: 10px 12px;
        font-size: 12px;
      }

      .vx_perf_section_title h3 {
        font-size: 18px;
      }

      .vx_perf_stat_value {
        font-size: 24px;
      }

      .vx_perf_stats_grid {
        gap: 12px;
      }

      .vx_perf_chart_wrapper {
        height: 200px;
      }

      .vx_perf_cta_stats {
        gap: 16px;
      }

      .vx_perf_legend {
        gap: 12px;
      }
    }
  </style>
</head>
