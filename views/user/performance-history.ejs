          { date: '2025-12-05', type: 'sell', amount: -150 },
          { date: '2025-12-12', type: 'sell', amount: 520 },
          { date: '2025-12-18', type: 'sell', amount: 450 },
          { date: '2025-12-25', type: 'sell', amount: -100 },
        ]
      };

      function drawChart(data) {
        if (!perfCanvas) return;

        const ctx = perfCanvas.getContext('2d');
        const canvas = perfCanvas;

        canvas.width = canvas.offsetWidth * window.devicePixelRatio;
        canvas.height = canvas.offsetHeight * window.devicePixelRatio;
        ctx.scale(window.devicePixelRatio, window.devicePixelRatio);

        const width = canvas.offsetWidth;
        const height = canvas.offsetHeight;

        ctx.clearRect(0, 0, width, height);

        if (data.length === 0) return;

        // Calculate cumulative P&L
        let cumulative = 0;
        const points = data.map(d => {
          cumulative += d.amount;
          return cumulative;
        });

        const minPoint = Math.min(...points, 0);
        const maxPoint = Math.max(...points, 0);
        const range = maxPoint - minPoint || 1;

        const padding = 40;
        const chartWidth = width - padding * 2;
        const chartHeight = height - padding * 2;

        // Draw line chart
        ctx.strokeStyle = '#22c55e';
        ctx.lineWidth = 2.5;
        ctx.lineCap = 'round';
        ctx.lineJoin = 'round';

        ctx.beginPath();
        points.forEach((point, i) => {
          const x = padding + (i / (points.length - 1 || 1)) * chartWidth;
          const y = padding + chartHeight - ((point - minPoint) / range) * chartHeight;

          if (i === 0) {
            ctx.moveTo(x, y);
          } else {
            ctx.lineTo(x, y);
          }
        });
        ctx.stroke();

        // Draw gradient fill
        const gradient = ctx.createLinearGradient(0, padding, 0, padding + chartHeight);
        gradient.addColorStop(0, 'rgba(34, 197, 94, 0.3)');
        gradient.addColorStop(1, 'rgba(34, 197, 94, 0.05)');

        ctx.fillStyle = gradient;
        ctx.beginPath();
        points.forEach((point, i) => {
          const x = padding + (i / (points.length - 1 || 1)) * chartWidth;
          const y = padding + chartHeight - ((point - minPoint) / range) * chartHeight;

          if (i === 0) {
            ctx.moveTo(x, y);
          } else {
            ctx.lineTo(x, y);
          }
        });
        ctx.lineTo(padding + chartWidth, padding + chartHeight);
        ctx.lineTo(padding, padding + chartHeight);
        ctx.closePath();
        ctx.fill();

        // Draw data points
        ctx.fillStyle = '#3b82f6';
        points.forEach((point, i) => {
          const x = padding + (i / (points.length - 1 || 1)) * chartWidth;
          const y = padding + chartHeight - ((point - minPoint) / range) * chartHeight;

          ctx.beginPath();
          ctx.arc(x, y, 3.5, 0, Math.PI * 2);
          ctx.fill();

          ctx.strokeStyle = '#0a1628';
          ctx.lineWidth = 2;
          ctx.stroke();
        });
      }

      function updateStats(data) {
        const total = data.length;
        const wins = data.filter(d => d.type === 'win' || (d.amount > 0 && d.type !== 'loss')).length;
        const losses = data.filter(d => d.type === 'loss' || (d.amount < 0 && d.type !== 'win')).length;
        const active = Math.ceil(data.length * 0.3);

        const winRate = total > 0 ? Math.round((wins / total) * 100) : 0;
        const lossRate = total > 0 ? Math.round((losses / total) * 100) : 0;

        document.getElementById('vx_stat_total').textContent = total;
        document.getElementById('vx_stat_total_change').textContent = `+${total}`;
        document.getElementById('vx_stat_wins').textContent = wins;
        document.getElementById('vx_stat_wins_pct').textContent = `${winRate}%`;
        document.getElementById('vx_stat_losses').textContent = losses;
        document.getElementById('vx_stat_losses_pct').textContent = `${lossRate}%`;
        document.getElementById('vx_stat_active').textContent = active;

        animateCounter(document.getElementById('vx_stat_total'), total);
      }

      function animateCounter(element, target) {
        const duration = 800;
        const start = 0;
        const increment = target / (duration / 16);
        let current = start;

        const timer = setInterval(() => {
          current += increment;
          if (current >= target) {
            current = target;
            clearInterval(timer);
          }
          element.textContent = Math.floor(current);
        }, 16);
      }

      function switchFilter(filterName) {
        currentFilter = filterName;
        const data = performanceData[filterName] || [];

        filterButtons.forEach(btn => {
          if (btn.dataset.filter === filterName) {
            btn.classList.add('vx_perf_active_tab');
          } else {
            btn.classList.remove('vx_perf_active_tab');
          }
        });

        if (data.length === 0) {
          statsGrid.style.display = 'none';
          emptyState.style.display = 'block';
        } else {
          statsGrid.style.display = 'grid';
          emptyState.style.display = 'none';
          drawChart(data);
          updateStats(data);
        }
      }

      // Event listeners for filter buttons
      filterButtons.forEach(button => {
        button.addEventListener('click', function() {
          switchFilter(this.dataset.filter);
        });
      });

      // Refresh button
      const refreshBtn = document.getElementById('vx_refresh_perf_btn');
      refreshBtn.addEventListener('click', function() {
        const icon = this.querySelector('svg');
        icon.style.animation = 'vx_spin 0.8s linear';

        setTimeout(() => {
          icon.style.animation = '';
          switchFilter(currentFilter);
        }, 800);
      });

      // Export button
      const exportBtn = document.getElementById('vx_export_perf_btn');
      exportBtn.addEventListener('click', function() {
        console.log('Exporting performance report for:', currentFilter);
        alert('Performance report would be exported as PDF/CSV');
      });

      // Initialize with default filter
      switchFilter('all');

      // Redraw chart on window resize
      window.addEventListener('resize', () => {
        if (currentFilter && performanceData[currentFilter]) {
          drawChart(performanceData[currentFilter]);
        }
      });

    })();
  </script>
