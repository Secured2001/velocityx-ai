<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Copy Trading</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  --dark-bg: #0a0e1a;
  --dark-surface: #121827;
  --dark-card: #1e293b;
  --border-color: #475569;
  --text-primary: #ffffff;
  --text-secondary: #e2e8f0;
  --text-muted: #94a3b8;
  --text-dim: #64748b;
  --color-blue: #3b82f6;
  --color-green: #22c55e;
  --color-yellow: #fbbf24;
  --color-orange: #f97316;
  --color-red: #ef4444;
}

html, body {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

body {
  background: linear-gradient(180deg, var(--dark-bg) 0%, var(--dark-surface) 50%, #0f1419 100%);
  color: var(--text-secondary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
  font-size: 16px;
  line-height: 1.6;
  min-height: 100vh;
  position: relative;
}

body::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 600px;
  background: radial-gradient(ellipse at top, rgba(59, 130, 246, 0.15) 0%, transparent 60%);
  pointer-events: none;
  z-index: 1;
}

.vx_ct_main_section {
  position: relative;
  z-index: 10;
  max-width: 1400px;
  margin: 0 auto;
  padding: 3rem 2rem;
}

.vx_ct_header_block {
  margin-bottom: 2.5rem;
  animation: fadeInDown 0.6s ease-out;
}

.vx_ct_header_wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 1.5rem;
}

.vx_ct_header_text_area {
  flex: 1;
  min-width: 300px;
}

.vx_ct_main_title {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
  letter-spacing: -0.02em;
  line-height: 1.2;
  background: linear-gradient(135deg, #ffffff 0%, #94a3b8 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.vx_ct_main_subtitle {
  font-size: 1rem;
  color: var(--text-muted);
  margin: 0;
  font-weight: 400;
  line-height: 1.5;
}

.vx_ct_header_actions_group {
  display: flex;
  gap: 0.75rem;
  flex-wrap: wrap;
}

.vx_ct_btn_primary {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border: none;
  border-radius: 0.75rem;
  color: var(--text-primary);
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 16px rgba(59, 130, 246, 0.3);
  position: relative;
  overflow: hidden;
}

.vx_ct_btn_primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.vx_ct_btn_primary:hover::before {
  left: 100%;
}

.vx_ct_btn_primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 24px rgba(59, 130, 246, 0.4);
}

.vx_ct_btn_secondary {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: rgba(30, 41, 59, 0.8);
  border: 1px solid rgba(71, 85, 105, 0.5);
  border-radius: 0.75rem;
  color: var(--text-secondary);
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(12px);
}

.vx_ct_btn_secondary:hover {
  background: rgba(30, 41, 59, 1);
  border-color: rgba(71, 85, 105, 0.8);
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
}

.vx_ct_stats_container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.25rem;
  margin-bottom: 2.5rem;
  animation: fadeInUp 0.6s ease-out 0.1s both;
}

.vx_ct_stat_box {
  background: linear-gradient(135deg, rgba(30, 41, 59, 0.6) 0%, rgba(15, 23, 42, 0.8) 100%);
  border: 1px solid rgba(71, 85, 105, 0.3);
  border-radius: 1rem;
  padding: 1.5rem;
  backdrop-filter: blur(20px);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.vx_ct_stat_box::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.5), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.vx_ct_stat_box:hover {
  transform: translateY(-4px);
  border-color: rgba(71, 85, 105, 0.6);
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.4);
}

.vx_ct_stat_box:hover::before {
  opacity: 1;
}

.vx_ct_stat_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.vx_ct_stat_label {
  font-size: 0.875rem;
  color: var(--text-muted);
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.vx_ct_stat_icon_wrapper {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0.75rem;
  transition: transform 0.3s ease;
  color: inherit;
}

.vx_ct_stat_box:hover .vx_ct_stat_icon_wrapper {
  transform: scale(1.1) rotate(5deg);
}

.vx_ct_icon_blue {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(37, 99, 235, 0.1) 100%);
  color: var(--color-blue);
}

.vx_ct_icon_green {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.2) 0%, rgba(22, 163, 74, 0.1) 100%);
  color: var(--color-green);
}

.vx_ct_icon_orange {
  background: linear-gradient(135deg, rgba(249, 115, 22, 0.2) 0%, rgba(234, 88, 12, 0.1) 100%);
  color: var(--color-orange);
}

.vx_ct_icon_emerald {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(5, 150, 105, 0.1) 100%);
  color: #10b981;
}

.vx_ct_stat_main_value {
  font-size: 2.25rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0.5rem 0;
  line-height: 1;
  letter-spacing: -0.02em;
}

.vx_ct_positive {
  color: var(--color-green);
}

.vx_ct_stat_desc {
  font-size: 0.875rem;
  color: var(--text-dim);
  font-weight: 400;
}

.vx_ct_empty_state_section {
  background: linear-gradient(135deg, rgba(30, 41, 59, 0.5) 0%, rgba(15, 23, 42, 0.7) 100%);
  border: 1px solid rgba(71, 85, 105, 0.3);
  border-radius: 1.5rem;
  padding: 4rem 2rem;
  text-align: center;
  margin-bottom: 2.5rem;
  backdrop-filter: blur(20px);
  position: relative;
  animation: fadeInUp 0.6s ease-out 0.2s both;
  overflow: hidden;
}

.vx_ct_empty_state_section::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(59, 130, 246, 0.05) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

.vx_ct_empty_icon_circle {
  width: 96px;
  height: 96px;
  margin: 0 auto 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(37, 99, 235, 0.1) 100%);
  border-radius: 50%;
  color: var(--color-blue);
  animation: pulse 3s ease-in-out infinite;
  position: relative;
  z-index: 1;
}

.vx_ct_empty_title {
  font-size: 2rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 1rem 0;
  position: relative;
  z-index: 1;
}

.vx_ct_empty_text {
  font-size: 1.125rem;
  color: var(--text-muted);
  max-width: 600px;
  margin: 0 auto 3rem;
  line-height: 1.6;
  position: relative;
  z-index: 1;
}

.vx_ct_features_row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
  max-width: 1200px;
  margin: 0 auto;
  position: relative;
  z-index: 1;
}

.vx_ct_feature_item {
  background: rgba(15, 23, 42, 0.6);
  border: 1px solid rgba(71, 85, 105, 0.3);
  border-radius: 1rem;
  padding: 2rem;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  text-align: left;
}

.vx_ct_feature_item:hover {
  transform: translateY(-8px);
  border-color: rgba(71, 85, 105, 0.6);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
}

.vx_ct_feature_icon {
  width: 64px;
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 1rem;
  margin-bottom: 1.5rem;
  transition: transform 0.4s ease;
}

.vx_ct_feature_item:hover .vx_ct_feature_icon {
  transform: scale(1.1) rotate(-5deg);
}

.vx_ct_feature_blue .vx_ct_feature_icon {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(37, 99, 235, 0.1) 100%);
  color: var(--color-blue);
}

.vx_ct_feature_green .vx_ct_feature_icon {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.2) 0%, rgba(22, 163, 74, 0.1) 100%);
  color: var(--color-green);
}

.vx_ct_feature_orange .vx_ct_feature_icon {
  background: linear-gradient(135deg, rgba(249, 115, 22, 0.2) 0%, rgba(234, 88, 12, 0.1) 100%);
  color: var(--color-orange);
}

.vx_ct_feature_title {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 0.75rem 0;
}

.vx_ct_feature_text {
  font-size: 0.95rem;
  color: var(--text-muted);
  line-height: 1.6;
  margin: 0;
}

.vx_ct_traders_section {
  margin-bottom: 2.5rem;
  animation: fadeInUp 0.6s ease-out 0.3s both;
}

.vx_ct_section_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
  flex-wrap: wrap;
  gap: 1rem;
}

.vx_ct_section_title {
  font-size: 1.75rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0 0 0.5rem 0;
}

.vx_ct_section_subtitle {
  font-size: 0.95rem;
  color: var(--text-muted);
  margin: 0;
}

.vx_ct_btn_filter {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.625rem 1.25rem;
  background: transparent;
  border: 1px solid rgba(71, 85, 105, 0.3);
  border-radius: 0.625rem;
  color: var(--text-muted);
  font-weight: 500;
  font-size: 0.9rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.vx_ct_btn_filter:hover {
  background: rgba(30, 41, 59, 0.5);
  border-color: rgba(71, 85, 105, 0.6);
  color: var(--text-secondary);
}

.vx_ct_traders_list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 1.5rem;
}

.vx_ct_trader_card {
  background: linear-gradient(135deg, rgba(30, 41, 59, 0.6) 0%, rgba(15, 23, 42, 0.8) 100%);
  border: 1px solid rgba(71, 85, 105, 0.3);
  border-radius: 1.25rem;
  padding: 1.75rem;
  backdrop-filter: blur(20px);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.vx_ct_trader_card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.05), transparent);
  transition: left 0.6s ease;
}

.vx_ct_trader_card:hover::before {
  left: 100%;
}

.vx_ct_trader_card:hover {
  transform: translateY(-6px);
  border-color: rgba(59, 130, 246, 0.4);
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.4);
}

.vx_ct_trader_card_header {
  display: flex;
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.vx_ct_trader_avatar {
  width: 56px;
  height: 56px;
  border-radius: 1rem;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(37, 99, 235, 0.1) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-blue);
  flex-shrink: 0;
  transition: transform 0.3s ease;
}

.vx_ct_trader_card:hover .vx_ct_trader_avatar {
  transform: scale(1.1) rotate(5deg);
}

.vx_ct_trader_details {
  flex: 1;
  min-width: 0;
}

.vx_ct_trader_name_row {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.5rem;
}

.vx_ct_trader_name {
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0;
}

.vx_ct_star {
  color: var(--color-yellow);
  flex-shrink: 0;
}

.vx_ct_trader_meta {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
  font-size: 0.875rem;
}

.vx_ct_meta_item {
  display: flex;
  align-items: center;
  gap: 0.375rem;
  color: var(--text-muted);
}

.vx_ct_risk_badge {
  padding: 0.25rem 0.75rem;
  border-radius: 0.5rem;
  font-weight: 600;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.vx_ct_risk_low {
  background: rgba(34, 197, 94, 0.15);
  color: var(--color-green);
  border: 1px solid rgba(34, 197, 94, 0.3);
}

.vx_ct_risk_medium {
  background: rgba(251, 191, 36, 0.15);
  color: var(--color-yellow);
  border: 1px solid rgba(251, 191, 36, 0.3);
}

.vx_ct_risk_high {
  background: rgba(239, 68, 68, 0.15);
  color: var(--color-red);
  border: 1px solid rgba(239, 68, 68, 0.3);
}

.vx_ct_trader_stats {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 1rem;
  margin-bottom: 1.25rem;
  padding: 1.25rem;
  background: rgba(15, 23, 42, 0.5);
  border-radius: 0.75rem;
  border: 1px solid rgba(71, 85, 105, 0.2);
}

.vx_ct_stat_item {
  text-align: center;
}

.vx_ct_stat_item .vx_ct_stat_label {
  display: block;
  font-size: 0.75rem;
  color: var(--text-dim);
  margin-bottom: 0.375rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-weight: 500;
}

.vx_ct_stat_item .vx_ct_stat_value {
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--text-secondary);
}

.vx_ct_trader_actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 0.75rem;
}

.vx_ct_btn_view {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  background: transparent;
  border: 1px solid rgba(71, 85, 105, 0.5);
  border-radius: 0.625rem;
  color: var(--text-muted);
  font-weight: 600;
  font-size: 0.9rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.vx_ct_btn_view:hover {
  background: rgba(30, 41, 59, 0.5);
  border-color: rgba(71, 85, 105, 0.8);
  color: var(--text-secondary);
  transform: translateY(-2px);
}

.vx_ct_btn_follow {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border: none;
  border-radius: 0.625rem;
  color: var(--text-primary);
  font-weight: 600;
  font-size: 0.9rem;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
}

.vx_ct_btn_follow:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
}

.vx_ct_settings_section {
  margin-bottom: 2.5rem;
  animation: fadeInUp 0.6s ease-out 0.3s both;
}

.vx_ct_btn_toggle-settings {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.625rem 1.25rem;
  background: transparent;
  border: 1px solid rgba(71, 85, 105, 0.3);
  border-radius: 0.625rem;
  color: var(--text-muted);
  font-weight: 500;
  font-size: 0.9rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.vx_ct_btn_toggle-settings:hover {
  background: rgba(30, 41, 59, 0.5);
  border-color: rgba(71, 85, 105, 0.6);
  color: var(--text-secondary);
}

.vx_ct_chevron {
  transition: transform 0.3s ease;
}

.vx_ct_settings_panel {
  background: linear-gradient(135deg, rgba(30, 41, 59, 0.5) 0%, rgba(15, 23, 42, 0.7) 100%);
  border: 1px solid rgba(71, 85, 105, 0.3);
  border-radius: 1.25rem;
  padding: 2rem;
  backdrop-filter: blur(20px);
  margin-top: 1rem;
  animation: slideDown 0.3s ease-out;
}

.vx_ct_settings_grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin-bottom: 2rem;
}

.vx_ct_form_group {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.vx_ct_form_label {
  font-size: 0.95rem;
  font-weight: 600;
  color: var(--text-secondary);
  cursor: pointer;
}

.vx_ct_input_wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.vx_ct_form_input {
  width: 100%;
  padding: 0.875rem 1rem;
  background: rgba(15, 23, 42, 0.6);
  border: 1px solid rgba(71, 85, 105, 0.4);
  border-radius: 0.75rem;
  color: var(--text-primary);
  font-size: 1rem;
  font-weight: 500;
  transition: all 0.3s ease;
  font-family: inherit;
}

.vx_ct_form_input:focus {
  outline: none;
  border-color: var(--color-blue);
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  background: rgba(15, 23, 42, 0.8);
}

.vx_ct_input_suffix {
  position: absolute;
  right: 1rem;
  color: var(--text-dim);
  font-size: 0.875rem;
  font-weight: 600;
  pointer-events: none;
}

.vx_ct_form_helper {
  font-size: 0.875rem;
  color: var(--text-dim);
  margin: 0;
  line-height: 1.4;
}

.vx_ct_settings_actions {
  display: flex;
  justify-content: flex-end;
  gap: 1rem;
  padding-top: 1.5rem;
  border-top: 1px solid rgba(71, 85, 105, 0.3);
}

.vx_ct_btn_reset {
  padding: 0.75rem 1.5rem;
  background: transparent;
  border: 1px solid rgba(71, 85, 105, 0.5);
  border-radius: 0.75rem;
  color: var(--text-secondary);
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.vx_ct_btn_reset:hover {
  background: rgba(30, 41, 59, 0.5);
  border-color: rgba(71, 85, 105, 0.8);
}

.vx_ct_btn_save {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border: none;
  border-radius: 0.75rem;
  color: var(--text-primary);
  font-weight: 600;
  font-size: 0.95rem;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 16px rgba(59, 130, 246, 0.3);
}

.vx_ct_btn_save:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 24px rgba(59, 130, 246, 0.4);
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.8;
  }
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes slideDown {
  from {
    opacity: 0;
    max-height: 0;
