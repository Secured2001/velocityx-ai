  <script src="https://unpkg.com/lucide@latest"></script>
  <script>
    lucide.createIcons();

    document.addEventListener('DOMContentLoaded', function() {
      const amountInput = document.getElementById('vx_creditAmount');
      const termSelect = document.getElementById('vx_creditTerm');
      const facilitySelect = document.getElementById('vx_creditFacility');
      const incomeSelect = document.getElementById('vx_monthlyIncome');
      const purposeTextarea = document.getElementById('vx_loanPurpose');
      const acceptTermsCheckbox = document.getElementById('vx_acceptTerms');
      const submitBtn = document.getElementById('vx_submitBtn');
      const estimateDisplay = document.getElementById('vx_estimateDisplay');
      const estimateValue = document.getElementById('vx_estimateValue');
      const charCount = document.getElementById('vx_charCount');
      const creditForm = document.getElementById('vx_creditApplicationForm');

      function calculateEstimate() {
        const amount = parseFloat(amountInput.value) || 0;
        const term = parseInt(termSelect.value) || 0;

        if (!amount || !term) {
          estimateDisplay.style.display = 'none';
          return;
        }

        const annualRate = 0.055;
        const monthlyRate = annualRate / 12;
        const monthlyPayment = (amount * monthlyRate) / (1 - Math.pow(1 + monthlyRate, -term));

        estimateValue.textContent = '$' + monthlyPayment.toFixed(2);
        estimateDisplay.style.display = 'flex';
      }

      function updateCharCount() {
        const currentLength = purposeTextarea.value.length;
        if (currentLength < 50) {
          charCount.textContent = `Minimum 50 characters required (${currentLength}/50)`;
          charCount.style.color = '#ef4444';
        } else {
          charCount.textContent = `${currentLength} characters`;
          charCount.style.color = '#10b981';
        }
      }

      function validateForm() {
        const isAmountValid = amountInput.value && parseFloat(amountInput.value) >= 1000;
        const isTermValid = termSelect.value !== '';
        const isFacilityValid = facilitySelect.value !== '';
        const isIncomeValid = incomeSelect.value !== '';
        const isPurposeValid = purposeTextarea.value.length >= 50;
        const isTermsAccepted = acceptTermsCheckbox.checked;

        const isValid = isAmountValid && isTermValid && isFacilityValid && isIncomeValid && isPurposeValid && isTermsAccepted;

        if (isValid) {
          submitBtn.classList.add('vx_active');
          submitBtn.disabled = false;
        } else {
          submitBtn.classList.remove('vx_active');
          submitBtn.disabled = true;
        }
      }

      amountInput.addEventListener('input', function() {
        calculateEstimate();
        validateForm();
      });

      termSelect.addEventListener('change', function() {
        calculateEstimate();
        validateForm();
      });

      facilitySelect.addEventListener('change', validateForm);
      incomeSelect.addEventListener('change', validateForm);

      purposeTextarea.addEventListener('input', function() {
        updateCharCount();
        validateForm();
      });

      acceptTermsCheckbox.addEventListener('change', validateForm);

      creditForm.addEventListener('submit', function(e) {
        e.preventDefault();

        if (!submitBtn.classList.contains('vx_active')) {
          return;
        }

        const formData = {
          amount: amountInput.value,
          term: termSelect.value,
          facility: facilitySelect.value,
          income: incomeSelect.value,
          purpose: purposeTextarea.value,
          estimatedPayment: estimateValue.textContent
        };

        console.log('Loan Application Submitted:', formData);

        submitBtn.innerHTML = '<i data-lucide="loader" style="width: 20px; height: 20px; animation: spin 1s linear infinite;"></i> Processing...';
        submitBtn.disabled = true;

        setTimeout(function() {
          alert('Application submitted successfully! We will review your application within 24-48 hours and notify you via email.');

          creditForm.reset();
          estimateDisplay.style.display = 'none';
          submitBtn.innerHTML = '<i data-lucide="send" style="width: 20px; height: 20px;"></i> Submit Loan Application';
          submitBtn.classList.remove('vx_active');
          submitBtn.disabled = true;
          charCount.textContent = 'Minimum 50 characters required';
          charCount.style.color = '#64748b';

          lucide.createIcons();
        }, 2000);
      });

      const style = document.createElement('style');
      style.textContent = '@keyframes spin { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }';
      document.head.appendChild(style);
    });
  </script>
