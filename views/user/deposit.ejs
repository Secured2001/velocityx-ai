<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Deposit - Trading Platform</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://i.imgur.com/xnzyBi9.png" rel="shortcut icon"/>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: #0a0e1a;
        color: #e2e8f0;
        min-height: 100vh;
        line-height: 1.6;
        display: flex;
  
    }

    .vx_deposit_page_wrapper {
  max-width: 1400px;
  width: 100%;
  margin: 0 auto;
  padding: 2rem 1rem;
  box-sizing: border-box;
}


    .vx_deposit_page_header {
        text-align: center;
        margin-bottom: 3rem;
        padding-top: 2rem;
    }

    .vx_deposit_page_header h1 {
        font-size: clamp(2rem, 4vw, 2.8rem);
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
    }

    .vx_deposit_page_header p {
        font-size: clamp(1rem, 2vw, 1.1rem);
        color: #94a3b8;
        font-weight: 400;
    }

    .vx_quick_amounts_section {
        text-align: center;
        margin-bottom: 3rem;
    }

    .vx_quick_amounts_label {
        font-size: 1rem;
        font-weight: 600;
        color: #cbd5e1;
        margin-bottom: 1.5rem;
        display: block;
    }

    .vx_quick_amounts_grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 1rem;
        max-width: 700px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .vx_amount_button {
        padding: 1.2rem 1.5rem;
        border-radius: 12px;
        border: 2px solid #334155;
        background: rgba(30, 41, 59, 0.8);
        color: #cbd5e1;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .vx_amount_button:hover {
        border-color: #3b82f6;
        background: rgba(59, 130, 246, 0.15);
        color: #3b82f6;
        transform: translateY(-3px);
    }

    .vx_deposit_main_grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        margin-bottom: 3rem;
    }

    @media (min-width: 1024px) {
        .vx_deposit_main_grid {
            grid-template-columns: 1fr 380px;
        }
    }

    .vx_make_deposit_card {
        background: linear-gradient(145deg, #1e293b 0%, #0f172a 100%);
        border-radius: 20px;
        padding: 2.5rem;
        border: 1px solid #334155;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
        height: fit-content;
    }

    .vx_make_deposit_card:hover {
        border-color: #3b82f6;
        box-shadow: 0 25px 70px rgba(0, 0, 0, 0.5);
    }

    .vx_card_section_title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.3rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 2rem;
    }

    .vx_card_section_icon {
        font-size: 1.5rem;
    }

    .vx_form_container {
        display: grid;
        gap: 2rem;
    }

    .vx_form_group {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    .vx_form_label {
        font-size: 1rem;
        font-weight: 600;
        color: #cbd5e1;
    }

    .vx_form_label span {
        color: #ef4444;
    }

    .vx_form_select,
    .vx_form_input {
        padding: 1.2rem;
        border-radius: 12px;
        border: 1px solid #334155;
        background: rgba(15, 23, 42, 0.8);
        color: #e2e8f0;
        font-size: 1rem;
        font-family: inherit;
        transition: all 0.3s ease;
    }

    .vx_form_select:hover,
    .vx_form_input:hover {
        border-color: #475569;
    }

    .vx_form_select:focus,
    .vx_form_input:focus {
        outline: none;
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
        background: rgba(15, 23, 42, 0.9);
    }

    .vx_form_select option {
        background: #0f172a;
        color: #e2e8f0;
    }

    .vx_input_prefix {
        font-size: 1.1rem;
        color: #64748b;
        font-weight: 600;
    }

    .vx_amount_input_group {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.2rem;
        background: rgba(15, 23, 42, 0.8);
        border: 1px solid #334155;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

    .vx_amount_input_group:focus-within {
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
    }

    .vx_amount_input_group input {
        flex: 1;
        padding: 1rem;
        border: none;
        background: transparent;
        color: #e2e8f0;
        font-size: 1rem;
    }

    .vx_amount_input_group input:focus {
        outline: none;
    }

    .vx_helper_text {
        font-size: 0.85rem;
        color: #64748b;
        margin-top: 0.3rem;
    }

    .vx_proceed_button {
        width: 100%;
        padding: 1.3rem;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        border: none;
        border-radius: 12px;
        color: #ffffff;
        font-weight: 700;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-top: 1rem;
    }

    .vx_proceed_button:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(59, 130, 246, 0.4);
    }

    .vx_proceed_button:active {
        transform: translateY(-1px);
    }

    .vx_security_badge {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid #334155;
        font-size: 0.85rem;
        color: #64748b;
    }

    .vx_security_icon {
        color: #10b981;
        font-size: 1rem;
    }

    .vx_sidebar {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .vx_payment_methods_card,
    .vx_how_to_deposit_card {
        background: linear-gradient(145deg, #1e293b 0%, #0f172a 100%);
        border-radius: 20px;
        padding: 2rem;
        border: 1px solid #334155;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
    }

    .vx_payment_methods_card:hover,
    .vx_how_to_deposit_card:hover {
        border-color: #3b82f6;
        transform: translateY(-3px);
    }

    .vx_sidebar_title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.2rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 1.5rem;
    }

    .vx_sidebar_icon {
        font-size: 1.3rem;
    }

    .vx_payment_method_list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .vx_payment_method_item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.2rem;
        background: rgba(30, 41, 59, 0.6);
        border: 1px solid #334155;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .vx_payment_method_item:hover {
        border-color: #3b82f6;
        background: rgba(59, 130, 246, 0.1);
        transform: translateX(5px);
    }

    .vx_method_icon {
        width: 40px;
        height: 40px;
        background: rgba(59, 130, 246, 0.2);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: #3b82f6;
    }

    .vx_method_name {
        font-size: 0.95rem;
        font-weight: 600;
        color: #cbd5e1;
    }

    .vx_deposit_steps {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
    }

    .vx_deposit_step {
        display: flex;
        gap: 1rem;
        align-items: flex-start;
    }

    .vx_step_circle {
        min-width: 32px;
        height: 32px;
        background: rgba(59, 130, 246, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.9rem;
        color: #3b82f6;
        flex-shrink: 0;
    }

    .vx_step_text {
        font-size: 0.9rem;
        color: #94a3b8;
        line-height: 1.6;
    }

    .vx_toast {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: #ffffff;
        padding: 1.2rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
        transform: translateY(150px);
        opacity: 0;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 9999;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .vx_toast.show {
        transform: translateY(0);
        opacity: 1;
    }

    @media (max-width: 1024px) {
        .vx_deposit_main_grid {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 768px) {
        .vx_quick_amounts_grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .vx_make_deposit_card {
            padding: 1.5rem;
        }

        .vx_sidebar {
            flex-direction: column;
        }
    }

    @media (max-width: 480px) {
        .vx_deposit_page_wrapper {
            padding: 1rem 0.5rem;
        }

        .vx_make_deposit_card,
        .vx_payment_methods_card,
        .vx_how_to_deposit_card {
            padding: 1.5rem;
            border-radius: 16px;
        }

        .vx_toast {
            left: 1rem;
            right: 1rem;
            bottom: 1rem;
        }
    }
  </style>
</head>
<body>
  <div class="dashboard-container">
    <%- include('../partials/user-nav.ejs', { user, page }) %>

    <main class="dashboard-content">
      <div class="vx_deposit_page_wrapper">
        <div class="vx_deposit_page_header">
          <h1>Fund Your Account</h1>
          <p>Secure deposits to start trading</p>
        </div>

        <div class="vx_quick_amounts_section">
          <span class="vx_quick_amounts_label">Quick amounts:</span>
          <div class="vx_quick_amounts_grid">
            <button class="vx_amount_button" onclick="setAmount(100)">$100</button>
            <button class="vx_amount_button" onclick="setAmount(500)">$500</button>
            <button class="vx_amount_button" onclick="setAmount(1000)">$1,000</button>
            <button class="vx_amount_button" onclick="setAmount(5000)">$5,000</button>
          </div>
        </div>

        <div class="vx_deposit_main_grid">
          <div class="vx_make_deposit_card">
            <h2 class="vx_card_section_title">
              <span class="vx_card_section_icon">üí≥</span>
              Make a Deposit
            </h2>

            <form id="depositForm" onsubmit="handleDeposit(event)">
              <div class="vx_form_container">
                <div class="vx_form_group">
                  <label class="vx_form_label">Payment Method <span>*</span></label>
                  <select id="paymentMethod" class="vx_form_select" required>
                    <option value="">Select payment method</option>
                    <option value="XRP">XRP</option>
                    <option value="DOGE">DOGE COIN</option>
                    <option value="USDT_ERC20">USDT ERC20</option>
                    <option value="SOL">Solana</option>
                    <option value="USDT">USDT</option>
                    <option value="BTC">Bitcoin</option>
                  </select>
                </div>

                <div class="vx_form_group">
                  <label class="vx_form_label">Amount to Deposit <span>*</span></label>
                  <div class="vx_amount_input_group">
                    <span class="vx_input_prefix">$</span>
                    <input
                      type="number"
                      id="amount"
                      name="amount"
                      min="10"
                      step="0.01"
                      placeholder="0.00"
                      required
                    >
                  </div>
                  <div class="vx_helper_text">Enter the amount you wish to deposit</div>
                </div>

                <button type="submit" class="vx_proceed_button">Proceed with Deposit</button>

                <div class="vx_security_badge">
                  <span class="vx_security_icon">üîí</span>
                  <span>Protected by 256-bit SSL encryption</span>
                </div>
              </div>
            </form>
          </div>

          <div class="vx_sidebar">
            <div class="vx_payment_methods_card">
              <h3 class="vx_sidebar_title">
                <span class="vx_sidebar_icon">üí∞</span>
                Payment Methods
              </h3>
              <div class="vx_payment_method_list">
                <div class="vx_payment_method_item">
                  <div class="vx_method_icon">üíé</div>
                  <div class="vx_method_name">XRP</div>
                </div>
                <div class="vx_payment_method_item">
                  <div class="vx_method_icon">üêï</div>
                  <div class="vx_method_name">DOGE COIN</div>
                </div>
                <div class="vx_payment_method_item">
                  <div class="vx_method_icon">üíµ</div>
                  <div class="vx_method_name">USDT ERC20</div>
                </div>
                <div class="vx_payment_method_item">
                  <div class="vx_method_icon">‚òÄÔ∏è</div>
                  <div class="vx_method_name">Solana</div>
                </div>
                <div class="vx_payment_method_item">
                  <div class="vx_method_icon">üíµ</div>
                  <div class="vx_method_name">USDT</div>
                </div>
                <div class="vx_payment_method_item">
                  <div class="vx_method_icon">‚Çø</div>
                  <div class="vx_method_name">Bitcoin</div>
                </div>
              </div>
            </div>

            <div class="vx_how_to_deposit_card">
              <h3 class="vx_sidebar_title">
                <span class="vx_sidebar_icon">üìñ</span>
                How to Deposit
              </h3>
              <div class="vx_deposit_steps">
                <div class="vx_deposit_step">
                  <div class="vx_step_circle">1</div>
                  <div class="vx_step_text">Choose your payment method</div>
                </div>
                <div class="vx_deposit_step">
                  <div class="vx_step_circle">2</div>
                  <div class="vx_step_text">Enter deposit amount</div>
                </div>
                <div class="vx_deposit_step">
                  <div class="vx_step_circle">3</div>
                  <div class="vx_step_text">Proceed to payment page</div>
                </div>
                <div class="vx_deposit_step">
                  <div class="vx_step_circle">4</div>
                  <div class="vx_step_text">Send payment to wallet</div>
                </div>
                <div class="vx_deposit_step">
                  <div class="vx_step_circle">5</div>
                  <div class="vx_step_text">Upload transaction proof</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>

  <div class="vx_toast" id="toast">
    <span id="toastIcon">‚ÑπÔ∏è</span>
    <span id="toastMessage"></span>
  </div>

  <script>
    function setAmount(amount) {
      document.getElementById('amount').value = amount;
      showToast(`Amount set to $${amount}`);
    }

    function handleDeposit(event) {
      event.preventDefault();

      const paymentMethod = document.getElementById('paymentMethod').value;
      const amount = document.getElementById('amount').value;

      if (!paymentMethod) {
        showToast('Please select a payment method', 'error');
        return;
      }

      if (!amount || amount < 10) {
        showToast('Amount must be at least $10', 'error');
        return;
      }

      showToast('Proceeding to payment...');

      setTimeout(() => {
        const payload = { paymentMethod, amount };

        fetch('/user/payment', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        })
        .then(response => response.json())
        .then(data => {
          if (data.success && data.redirect) {
            window.location.href = data.redirect;
          } else if (data.success) {
            window.location.href = `/user/payment?method=${encodeURIComponent(paymentMethod)}&amount=${encodeURIComponent(amount)}`;
          } else {
            showToast(data.message || 'An error occurred', 'error');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          showToast('Failed to process deposit', 'error');
        });
      }, 800);
    }

    function showToast(message, type = 'success') {
      const toast = document.getElementById('toast');
      const toastMessage = document.getElementById('toastMessage');
      const toastIcon = document.getElementById('toastIcon');

      toastMessage.textContent = message;

      if (type === 'error') {
        toastIcon.textContent = '‚ùå';
        toast.style.background = 'linear-gradient(135deg, #ef4444 0%, #dc2626 100%)';
      } else {
        toastIcon.textContent = '‚úì';
        toast.style.background = 'linear-gradient(135deg, #3b82f6 0%, #2563eb 100%)';
      }

      toast.classList.add('show');
      setTimeout(() => {
        toast.classList.remove('show');
      }, 3000);
    }

    document.getElementById('amount').addEventListener('input', (e) => {
      if (e.target.value && e.target.value < 10) {
        e.target.style.borderColor = '#ef4444';
      } else {
        e.target.style.borderColor = '';
      }
    });

    document.querySelectorAll('.vx_payment_method_item').forEach(item => {
      item.addEventListener('click', () => {
        const methodName = item.querySelector('.vx_method_name').textContent.trim();
        const map = { 'DOGE COIN': 'DOGE', 'USDT ERC20': 'USDT_ERC20', 'Solana': 'SOL', 'USDT': 'USDT', 'Bitcoin': 'BTC', 'XRP': 'XRP' };
        const val = map[methodName] || methodName;
        document.getElementById('paymentMethod').value = val;
        showToast(`Selected: ${methodName}`);
      });
    });
  </script>

  <script src="/js/dashboard.js"></script>
</body>
</html>
