  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const avatarInput = document.getElementById('vx_avatar_input');
      const avatarImage = document.getElementById('vx_avatar_image');
      const avatarInitials = document.getElementById('vx_avatar_initials');
      const fullNameInput = document.getElementById('vx_input_fullname');
      const heroName = document.getElementById('vx_hero_name');
      const tabs = document.querySelectorAll('.vx_profile_tab');
      const tabContents = document.querySelectorAll('.vx_tab_content');
      const toggle2fa = document.getElementById('vx_toggle_2fa');
      const toggleNotifications = document.getElementById('vx_toggle_notifications');

      if (avatarInput) {
        avatarInput.addEventListener('change', function(e) {
          const file = e.target.files[0];
          if (!file) return;

          const reader = new FileReader();
          reader.onload = function(event) {
            avatarImage.src = event.target.result;
            avatarImage.style.display = 'block';
            avatarInitials.style.display = 'none';
          };
          reader.readAsDataURL(file);
        });
      }

      if (fullNameInput) {
        fullNameInput.addEventListener('input', function() {
          const name = this.value.trim();
          if (heroName) {
            heroName.textContent = name || 'User Name';
          }
          if (!avatarImage.src || avatarImage.style.display === 'none') {
            const initials = name.split(' ').map(n => n[0]).join('').toUpperCase().slice(0, 2) || 'U';
            avatarInitials.textContent = initials;
          }
        });
      }

      tabs.forEach(tab => {
        tab.addEventListener('click', function() {
          const targetTab = this.getAttribute('data-tab');

          tabs.forEach(t => t.classList.remove('vx_active'));
          this.classList.add('vx_active');

          tabContents.forEach(content => {
            content.classList.remove('vx_active');
          });

          const targetContent = document.getElementById('vx_' + targetTab + '_content');
          if (targetContent) {
            targetContent.classList.add('vx_active');
          }
        });
      });

      if (toggle2fa) {
        toggle2fa.addEventListener('click', function() {
          this.classList.toggle('vx_active');
          const isActive = this.classList.contains('vx_active');
          if (isActive) {
            alert('Two-Factor Authentication enabled. You will now need a verification code to sign in.');
          } else {
            alert('Two-Factor Authentication disabled.');
          }
        });
      }

      if (toggleNotifications) {
        toggleNotifications.addEventListener('click', function() {
          this.classList.toggle('vx_active');
          const isActive = this.classList.contains('vx_active');
          if (isActive) {
            alert('Login notifications enabled. You will receive alerts for new login attempts.');
          } else {
            alert('Login notifications disabled.');
          }
        });
      }

      const form = document.getElementById('vx_profile_form');
      if (form) {
        form.addEventListener('submit', function(e) {
          const fullName = document.getElementById('vx_input_fullname').value.trim();

          if (!fullName) {
            e.preventDefault();
            alert('Please enter your full name');
            return false;
          }
        });
      }

      const activityItems = document.querySelectorAll('.vx_profile_activity_item');
      activityItems.forEach((item, index) => {
        item.style.animation = 'vx_fadeInUp 0.5s ease ' + (0.6 + index * 0.1) + 's both';
      });
    });
  </script>
